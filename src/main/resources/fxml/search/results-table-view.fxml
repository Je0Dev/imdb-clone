<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<TableView fx:id="resultsTable"
           style="-fx-background-color: #1A1A1A; -fx-text-fill: #FFFFFF; -fx-table-cell-border-color: #333;"
           styleClass="content-table"
           VBox.vgrow="ALWAYS"
           HBox.hgrow="ALWAYS"
           fx:controller="com.papel.imdb_clone.controllers.search.ResultsTableController" xmlns:fx="http://javafx.com/fxml/1">
    
    <columns>
        <!-- Title Column -->
        <TableColumn fx:id="resultTitleColumn" prefWidth="250" text="TITLE" style="-fx-font-weight: bold; -fx-text-fill: #00E5FF; -fx-font-size: 14;">
            <style>
                -fx-alignment: CENTER_LEFT;
                -fx-background-color: #2A2A2A;
                -fx-border-color: #444;
            </style>
        </TableColumn>
        
        <!-- Type Column -->
        <TableColumn fx:id="resultTypeColumn" prefWidth="100" text="TYPE" style="-fx-text-fill: #40C4FF; -fx-font-weight: bold;">
            <style>
                -fx-alignment: CENTER;
                -fx-background-color: #2A2A2A;
                -fx-border-color: #444;
            </style>
        </TableColumn>
        
        <!-- Year Column -->
        <TableColumn fx:id="resultYearColumn" text="YEAR" style="-fx-text-fill: #69F0AE; -fx-font-weight: bold;">
            <style>
                -fx-alignment: CENTER;
                -fx-background-color: #2A2A2A;
                -fx-border-color: #444;
            </style>
        </TableColumn>
        
        <!-- Genre Column -->
        <TableColumn fx:id="resultGenreColumn" prefWidth="200" sortable="false" text="GENRE" style="-fx-text-fill: #FF8A65; -fx-font-weight: bold;">
            <style>
                -fx-alignment: CENTER_LEFT;
                -fx-background-color: #2A2A2A;
                -fx-border-color: #444;
            </style>
        </TableColumn>
        
        <!-- IMDb Rating Column -->
        <TableColumn fx:id="resultImdbColumn" prefWidth="100" text="IMDB RATING" style="-fx-text-fill: #FFD700; -fx-font-weight: bold;">
            <style>
                -fx-alignment: CENTER;
                -fx-background-color: #2A2A2A;
                -fx-border-color: #444;
            </style>
            <graphic>
                <HBox alignment="CENTER" spacing="5">
                    <Label style="-fx-text-fill: #FFD700; -fx-font-size: 14;" text="★" />
                </HBox>
            </graphic>
        </TableColumn>
        
        <!-- Director Column (Optional, can be shown/hidden based on content type) -->
        <TableColumn fx:id="resultDirectorColumn" prefWidth="180" text="DIRECTOR" style="-fx-text-fill: #FF80AB; -fx-font-weight: bold;" visible="false">
            <style>
                -fx-alignment: CENTER_LEFT;
                -fx-background-color: #2A2A2A;
                -fx-border-color: #444;
            </style>
        </TableColumn>
    </columns>
    
    <columnResizePolicy>
        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
    </columnResizePolicy>

    <placeholder>
        <VBox alignment="CENTER" cache="true" cacheHint="QUALITY" spacing="20" style="-fx-padding: 40;">
            <Label style="-fx-font-size: 48; -fx-text-fill: #444;" text="🔍" />
            <Label style="-fx-text-fill: #888; -fx-font-style: italic; -fx-font-size: 14;" text="Enter your search criteria and click 'SEARCH' to find content" />
        </VBox>
    </placeholder>
</TableView>
