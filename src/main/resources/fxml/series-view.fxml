<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>
<?import java.lang.String?>
<BorderPane style="-fx-background-color: #0a0a0a;" xmlns="http://javafx.com/javafx/17.0.12"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.papel.imdb_clone.controllers.ContentController">

    <top>
        <VBox spacing="15.0" style="-fx-padding: 20;">
            <HBox alignment="CENTER_LEFT" spacing="15">
                <Text style="-fx-fill: #00B0FF; -fx-font-size: 26px; -fx-font-weight: bolder; -fx-effect: dropshadow(gaussian, rgba(0,176,255,0.5), 10, 0, 0, 2);"
                      text="TV SERIES"/>
                <Region HBox.hgrow="ALWAYS"/>
                <Label style="-fx-text-fill: #FFFFFF; -fx-font-weight: bold; -fx-font-size: 14;" text="TOTAL SERIES:"/>
                <Label fx:id="seriesCountLabel"
                       style="-fx-text-fill: #00B0FF; -fx-font-weight: bolder; -fx-font-size: 16; -fx-effect: dropshadow(gaussian, rgba(0,176,255,0.5), 5, 0, 0, 1);"/>
            </HBox>

            <HBox alignment="CENTER_LEFT" spacing="15" style="-fx-padding: 5 0 20 0;">
                <TextField fx:id="seriesSearchField" promptText="Search series..."
                           style="-fx-background-color: #1E1E1E; -fx-text-fill: #FFFFFF; -fx-prompt-text-fill: #888; -fx-background-radius: 4; -fx-border-color: #444; -fx-border-radius: 4; -fx-font-size: 14; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.3), 5, 0, 0, 1);"
                           HBox.hgrow="ALWAYS">
                    <padding>
                        <Insets bottom="12" left="15" right="15" top="12"/>
                    </padding>
                </TextField>

                <ComboBox fx:id="seriesSortBy" prefWidth="220"
                          style="-fx-background-color: #1E1E1E; -fx-text-fill: #FFFFFF; -fx-border-color: #444; -fx-border-radius: 4; -fx-font-size: 14; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.3), 5, 0, 0, 1);">
                    <padding>
                        <Insets bottom="10" left="12" right="12" top="10"/>
                    </padding>
                </ComboBox>
            </HBox>

            <HBox spacing="15" style="-fx-padding: 5 0 20 0;">
                <Button onAction="#handleAddSeries"
                        style="-fx-background-color: #00B0FF; -fx-text-fill: #000000; -fx-font-weight: bolder; -fx-font-size: 14; -fx-padding: 10 20; -fx-background-radius: 4; -fx-cursor: hand; -fx-effect: dropshadow(gaussian, rgba(0,176,255,0.5), 5, 0, 0, 2);"
                        text="ADD SERIES">
                    <tooltip>
                        <Tooltip
                                style="-fx-background-color: #1E1E1E; -fx-text-fill: #FFFFFF; -fx-font-size: 12; -fx-padding: 8 12; -fx-background-radius: 4; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.5), 5, 0, 0, 2);"
                                text="Add a new TV series"/>
                    </tooltip>
                </Button>

                <Button onAction="#handleRateSeries"
                        style="-fx-background-color: transparent; -fx-text-fill: #FFD54F; -fx-border-color: #FFD54F; -fx-border-width: 2; -fx-border-radius: 4; -fx-padding: 10 20; -fx-font-weight: bold; -fx-font-size: 14; -fx-cursor: hand; -fx-effect: dropshadow(gaussian, rgba(255,213,79,0.3), 5, 0, 0, 2);"
                        text="RATE SERIES">
                    <tooltip>
                        <Tooltip
                                style="-fx-background-color: #1E1E1E; -fx-text-fill: #FFFFFF; -fx-font-size: 12; -fx-padding: 8 12; -fx-background-radius: 4; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.5), 5, 0, 0, 2);"
                                text="Rate this TV series"/>
                    </tooltip>
                </Button>

                <Button onAction="#handleDeleteSeries"
                        style="-fx-background-color: #FF5252; -fx-text-fill: #FFFFFF; -fx-font-weight: bolder; -fx-font-size: 14; -fx-padding: 10 20; -fx-background-radius: 4; -fx-cursor: hand; -fx-effect: dropshadow(gaussian, rgba(255,82,82,0.5), 5, 0, 0, 2);"
                        text="DELETE SERIES">
                    <tooltip>
                        <Tooltip
                                style="-fx-background-color: #1E1E1E; -fx-text-fill: #FFFFFF; -fx-font-size: 12; -fx-padding: 8 12; -fx-background-radius: 4; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.5), 5, 0, 0, 2);"
                                text="Delete the selected series"/>
                    </tooltip>
                </Button>
            </HBox>
        </VBox>
    </top>

    <center>
        <TableView fx:id="seriesTable"
                   style="-fx-background-color: transparent; -fx-text-fill: #FFFFFF; -fx-table-cell-border-color: transparent; -fx-padding: 2;"
                   styleClass="content-table">
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
            </columnResizePolicy>
            <styleClass>
                <String fx:value="table-view"/>
                <String fx:value="noheader-visible-table-view"/>
            </styleClass>
            <columns>
                <TableColumn fx:id="seriesTitleColumn" prefWidth="250" sortable="true"
                             style="-fx-font-weight: bold; -fx-text-fill: #00B0FF;" text="TITLE">
                </TableColumn>
                <TableColumn fx:id="seriesYearColumn" prefWidth="90" sortable="true" style="-fx-text-fill: #4FC3F7;"
                             text="YEAR">
                </TableColumn>
                <TableColumn fx:id="seriesGenreColumn" prefWidth="200" sortable="false" style="-fx-text-fill: #A5D6A7;"
                             text="GENRE">
                </TableColumn>
                <TableColumn fx:id="seriesSeasonsColumn" prefWidth="90" sortable="true" style="-fx-text-fill: #FFAB91;"
                             text="SEASONS">
                </TableColumn>
                <TableColumn fx:id="seriesEpisodesColumn" prefWidth="100" sortable="true"
                             style="-fx-text-fill: #90CAF9;" text="EPISODES">
                </TableColumn>
                <TableColumn fx:id="seriesRatingColumn" prefWidth="100" sortable="true" style="-fx-text-fill: #FFD54F;"
                             text="RATING">
                    <graphic>
                        <HBox alignment="CENTER" spacing="5"/>
                    </graphic>
                </TableColumn>
            </columns>
            <placeholder>
                <Label style="-fx-text-fill: #AAAAAA; -fx-font-size: 14; -fx-padding: 20;"
                       text="No TV series found. Click 'ADD SERIES' to get started!"/>
            </placeholder>
        </TableView>
    </center>

    <bottom>
        <HBox alignment="CENTER_RIGHT" spacing="15"
              style="-fx-background-color: #1A1A1A; -fx-padding: 8 15; -fx-border-color: #333; -fx-border-width: 1 0 0 0;">
            <Label fx:id="statusLabel" style="-fx-text-fill: #AAAAAA; -fx-font-size: 12;" text="2025 @ PAPEL"
                   textFill="#bc1e1e"/>
            <Region HBox.hgrow="ALWAYS"/>
            <Label fx:id="itemCountLabel" style="-fx-text-fill: #00B0FF; -fx-font-weight: bold; -fx-font-size: 12;"
                   text="Imdb Series"/>
        </HBox>
    </bottom>
</BorderPane>
