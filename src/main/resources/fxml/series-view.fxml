<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.Rectangle?>
<?import javafx.scene.text.Text?>
<?import java.lang.String?>
<BorderPane style="-fx-background-color: #0a0a0a;" xmlns="http://javafx.com/javafx/17.0.12"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.papel.imdb_clone.controllers.ContentController">

    <top>
        <VBox spacing="15.0" style="-fx-padding: 20;">
            <!-- Header Section -->
            <HBox alignment="CENTER_LEFT" spacing="10">
                <Text style="-fx-fill: #FFD700; -fx-font-size: 26px; -fx-font-weight: bolder;" text="TV SERIES">
                    <effect>
                        <DropShadow color="rgba(255,215,0,0.7)" radius="10" spread="0.3"/>
                    </effect>
                </Text>
                <Rectangle arcHeight="5" arcWidth="5" fill="#444" height="30" width="3"/>
                <Text style="-fx-fill: #888; -fx-font-size: 16; -fx-font-style: italic;"
                      text="Browse and manage your series collection"/>
            </HBox>

            <HBox alignment="CENTER_LEFT" spacing="15" style="-fx-padding: 5 0 20 0;"/>

            <HBox spacing="15" style="-fx-padding: 5 0 20 0;">
                <Button onAction="#handleAddSeries"
                        style="-fx-background-color: #00B0FF; -fx-text-fill: #000000; -fx-font-weight: bolder; -fx-font-size: 14; -fx-padding: 10 20; -fx-background-radius: 4; -fx-cursor: hand; -fx-effect: dropshadow(gaussian, rgba(0,176,255,0.5), 5, 0, 0, 2);"
                        text="ADD SERIES">
                    <tooltip>
                        <Tooltip
                                style="-fx-background-color: #1E1E1E; -fx-text-fill: #FFFFFF; -fx-font-size: 12; -fx-padding: 8 12; -fx-background-radius: 4; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.5), 5, 0, 0, 2);"
                                text="Add a new TV series"/>
                    </tooltip>
                </Button>

                <Button onAction="#handleRateSeries"
                        style="-fx-background-color: transparent; -fx-text-fill: #FFD54F; -fx-border-color: #FFD54F; -fx-border-width: 2; -fx-border-radius: 4; -fx-padding: 10 20; -fx-font-weight: bold; -fx-font-size: 14; -fx-cursor: hand; -fx-effect: dropshadow(gaussian, rgba(255,213,79,0.3), 5, 0, 0, 2);"
                        text="RATE SERIES">
                    <tooltip>
                        <Tooltip
                                style="-fx-background-color: #1E1E1E; -fx-text-fill: #FFFFFF; -fx-font-size: 12; -fx-padding: 8 12; -fx-background-radius: 4; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.5), 5, 0, 0, 2);"
                                text="Rate this TV series"/>
                    </tooltip>
                </Button>

                <Button onAction="#handleDeleteSeries"
                        style="-fx-background-color: #FF5252; -fx-text-fill: #FFFFFF; -fx-font-weight: bolder; -fx-font-size: 14; -fx-padding: 10 20; -fx-background-radius: 4; -fx-cursor: hand; -fx-effect: dropshadow(gaussian, rgba(255,82,82,0.5), 5, 0, 0, 2);"
                        text="DELETE SERIES">
                    <tooltip>
                        <Tooltip
                                style="-fx-background-color: #1E1E1E; -fx-text-fill: #FFFFFF; -fx-font-size: 12; -fx-padding: 8 12; -fx-background-radius: 4; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.5), 5, 0, 0, 2);"
                                text="Delete the selected series"/>
                    </tooltip>
                </Button>
            </HBox>
        </VBox>
    </top>

    <center>
        <TabPane style="-fx-tab-min-width: 100; -fx-tab-max-width: 200;" tabClosingPolicy="UNAVAILABLE">
            <Tab text="Series List">
                <VBox style="-fx-padding: 0 0 20 0;" VBox.vgrow="ALWAYS">
                    <ScrollPane fitToWidth="true" style="-fx-background-color: transparent; -fx-padding: 0;"
                                VBox.vgrow="ALWAYS">
                        <TableView fx:id="seriesTable" style="-fx-background-color: white; -fx-table-cell-border-color: #e0e0e0;" VBox.vgrow="ALWAYS">
                        <columnResizePolicy>
                            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                        </columnResizePolicy>
                        <columns>
                            <TableColumn fx:id="seriesTitleColumn" prefWidth="250" sortable="true" text="Title">
                                <style>
                                    -fx-background-color: #f5f5f5;
                                    -fx-text-fill: #333333;
                                    -fx-font-weight: bold;
                                    -fx-border-color: #e0e0e0;
                                </style>
                            </TableColumn>
                            <TableColumn fx:id="seriesYearColumn" prefWidth="100" sortable="true" text="Year">
                                <style>
                                    -fx-background-color: #f5f5f5;
                                    -fx-text-fill: #333333;
                                    -fx-font-weight: bold;
                                    -fx-border-color: #e0e0e0;
                                </style>
                            </TableColumn>
                            <TableColumn fx:id="seriesGenreColumn" prefWidth="200" sortable="false" text="Genre">
                                <style>
                                    -fx-background-color: #f5f5f5;
                                    -fx-text-fill: #333333;
                                    -fx-font-weight: bold;
                                    -fx-border-color: #e0e0e0;
                                </style>
                            </TableColumn>
                            <TableColumn fx:id="seriesSeasonsColumn" prefWidth="100" sortable="true" text="Seasons">
                                <style>
                                    -fx-background-color: #f5f5f5;
                                    -fx-text-fill: #333333;
                                    -fx-font-weight: bold;
                                    -fx-border-color: #e0e0e0;
                                </style>
                            </TableColumn>
                            <TableColumn fx:id="seriesRatingColumn" prefWidth="100" sortable="true" text="Rating">
                                <style>
                                    -fx-background-color: #f5f5f5;
                                    -fx-text-fill: #333333;
                                    -fx-font-weight: bold;
                                    -fx-border-color: #e0e0e0;
                                </style>
                            </TableColumn>
                        </columns>
                        <style>
                            -fx-text-fill: #333333;
                            -fx-table-cell-border-color: #e0e0e0;
                            -fx-table-header-border-color: #e0e0e0;
                            -fx-background-color: white;
                        </style>
                            <placeholder>
                                <Label style="-fx-text-fill: #AAAAAA; -fx-font-size: 14; -fx-padding: 20;"
                                       text="No TV series found. Click 'ADD SERIES' to get started!"/>
                            </placeholder>
                        </TableView>
                    </ScrollPane>
                </VBox>
            </Tab>
            <Tab text="Manage Series">
                <VBox style="-fx-padding: 0 0 20 0;" VBox.vgrow="ALWAYS">
                    <fx:include fx:id="seriesManagementView" source="series-management-view.fxml"/>
                </VBox>
            </Tab>
        </TabPane>
    </center>

    <bottom>
        <HBox alignment="CENTER_RIGHT" spacing="15"
              style="-fx-background-color: #1A1A1A; -fx-padding: 8 15; -fx-border-color: #333; -fx-border-width: 1 0 0 0;">
            <Region HBox.hgrow="ALWAYS"/>
        </HBox>
    </bottom>
</BorderPane>
