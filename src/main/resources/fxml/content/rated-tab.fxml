<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<VBox fx:controller="com.papel.imdb_clone.controllers.content.RatedTabController"
      spacing="10" 
      style="-fx-background-color: #1e1e1e; -fx-padding: 20;"
      xmlns="http://javafx.com/javafx/21"
      xmlns:fx="http://javafx.com/fxml/1">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>
    
    <HBox alignment="CENTER_LEFT" spacing="10">
        <Label text="Your Rated Content" 
               style="-fx-text-fill: white; -fx-font-size: 24px; -fx-font-weight: bold;"
               HBox.hgrow="ALWAYS"/>
        
        <Button text="Home" 
                onAction="#handleHomeButton" 
                style="-fx-background-color: #f5c518; -fx-text-fill: black; -fx-font-weight: bold; -fx-padding: 5 15 5 15; -fx-background-radius: 5;"/>
    </HBox>
    
    <Separator style="-fx-background-color: #333; -fx-pref-height: 2;"/>
    
    <HBox spacing="20" VBox.vgrow="ALWAYS">
        <!-- Left side: Table of rated content -->
        <VBox spacing="10" HBox.hgrow="ALWAYS" maxWidth="500">
            <TableView fx:id="ratingsTable" VBox.vgrow="ALWAYS">
                <columns>
                    <TableColumn fx:id="titleColumn" text="Title" prefWidth="200"/>
                    <TableColumn fx:id="ratingColumn" text="Your Rating" prefWidth="150"/>
                    <TableColumn fx:id="dateRatedColumn" text="Date Rated" prefWidth="150"/>
                </columns>
                <columnResizePolicy>
                    <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                </columnResizePolicy>
            </TableView>
        </VBox>
        
        <!-- Right side: Rating details -->
        <VBox fx:id="detailsContainer" spacing="15" style="-fx-padding: 15; -fx-background-color: #2a2a2a; -fx-background-radius: 5;" 
              minWidth="400" visible="false">
            
            <Label fx:id="titleLabel" style="-fx-text-fill: white; -fx-font-size: 18px; -fx-font-weight: bold;"/>
            
            <Label fx:id="ratingLabel" style="-fx-text-fill: #f5c518;"/>
            <Label fx:id="dateRatedLabel" style="-fx-text-fill: #999;"/>
            
            <Separator style="-fx-background-color: #444;"/>
            
            <Label text="Your Review" style="-fx-text-fill: white; -fx-font-weight: bold;"/>
            <TextArea fx:id="reviewTextArea" 
                     style="-fx-text-fill: white; -fx-background-color: #333; -fx-control-inner-background: #333;"
                     wrapText="true" 
                     promptText="Write your review here..."
                     VBox.vgrow="ALWAYS"/>
            
            <HBox spacing="10" alignment="CENTER_RIGHT">
                <Button text="Save Review" 
                        onAction="#handleSaveReview" 
                        style="-fx-background-color: #f5c518; -fx-text-fill: black;"/>
                <Button text="Delete Rating" 
                        onAction="#handleDeleteRating" 
                        style="-fx-background-color: #d32f2f; -fx-text-fill: white;"/>
            </HBox>
        </VBox>
    </HBox>

</VBox>
