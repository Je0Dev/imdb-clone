<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<VBox xmlns:fx="http://javafx.com/fxml/1" 
      fx:controller="com.papel.imdb_clone.controllers.content.ContentDetailsController"
      spacing="15" 
      style="-fx-background-color: #1e1e1e;"
      padding="20">
    
    <!-- Content Header -->
    <HBox spacing="20">
        <VBox spacing="10" HBox.hgrow="ALWAYS">
            <Label fx:id="titleLabel" style="-fx-text-fill: white; -fx-font-size: 24px; -fx-font-weight: bold;" />
            
            <HBox spacing="10">
                <Label fx:id="yearLabel" style="-fx-text-fill: #999;" />
                <Label fx:id="runtimeLabel" style="-fx-text-fill: #999;" />
                <Label fx:id="ratingLabel" style="-fx-text-fill: #f5c518; -fx-font-weight: bold;" />
            </HBox>
            
            <HBox spacing="10" style="-fx-background-color: #2a2a2a; -fx-padding: 10; -fx-background-radius: 5;">
                <VBox spacing="5">
                    <Label text="Your Rating" style="-fx-text-fill: white; -fx-font-weight: bold;" />
                    <Label fx:id="userRatingLabel" text="Not Rated" style="-fx-text-fill: #f5c518;" />
                </VBox>
                <Separator orientation="VERTICAL" style="-fx-background-color: #444;" />
                <VBox spacing="5">
                    <Label text="Average Rating" style="-fx-text-fill: white; -fx-font-weight: bold;" />
                    <Label fx:id="avgRatingLabel" text="N/A" style="-fx-text-fill: #f5c518;" />
                </VBox>
            </HBox>
            
            <Label text="Overview" style="-fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 5 0 0 0;" />
            <TextArea fx:id="overviewText" wrapText="true" editable="false" 
                     style="-fx-text-fill: white; -fx-background-color: transparent; -fx-border-color: transparent;" />
        </VBox>
    </HBox>
    
    <!-- Rating Section -->
    <VBox fx:id="ratingContainer" spacing="10" style="-fx-background-color: #2a2a2a; -fx-padding: 15; -fx-background-radius: 5;">
        <Label text="Rate this content" style="-fx-text-fill: white; -fx-font-size: 18px; -fx-font-weight: bold;" />
        
        <Label fx:id="ratingStatusLabel" text="Rate this content" style="-fx-text-fill: #f5c518;" />
        
        <HBox spacing="10" alignment="CENTER_LEFT">
            <Slider fx:id="ratingSlider" min="1" max="10" majorTickUnit="1" minorTickCount="0" 
                   showTickMarks="true" showTickLabels="true" snapToTicks="true" 
                   blockIncrement="1" value="5" />
            <Label fx:id="ratingValueLabel" text="5/10" style="-fx-text-fill: white; -fx-min-width: 50;" />
        </HBox>
        
        <Label text="Your Review (Optional)" style="-fx-text-fill: white; -fx-font-weight: bold;" />
        <TextArea fx:id="reviewTextArea" wrapText="true" 
                 style="-fx-text-fill: white; -fx-background-color: #333; -fx-control-inner-background: #333;"
                 promptText="Share your thoughts about this content..." />
        
        <Button fx:id="submitRatingBtn" text="Submit Rating" 
                style="-fx-background-color: #f5c518; -fx-text-fill: black; -fx-font-weight: bold;" 
                onAction="#handleRatingSubmission" />
    </VBox>
    
    <!-- Additional Content Details -->
    <VBox spacing="10" style="-fx-background-color: #2a2a2a; -fx-padding: 15; -fx-background-radius: 5;">
        <Label text="Details" style="-fx-text-fill: white; -fx-font-size: 18px; -fx-font-weight: bold;" />
        
        <GridPane hgap="10" vgap="5">
            <Label text="Director:" style="-fx-text-fill: #999;" GridPane.columnIndex="0" GridPane.rowIndex="0" />
            <Label fx:id="directorLabel" style="-fx-text-fill: white;" GridPane.columnIndex="1" GridPane.rowIndex="0" />
            
            <Label text="Cast:" style="-fx-text-fill: #999;" GridPane.columnIndex="0" GridPane.rowIndex="1" />
            <Label fx:id="castLabel" style="-fx-text-fill: white;" wrapText="true" GridPane.columnIndex="1" GridPane.rowIndex="1" />
            
            <Label text="Genres:" style="-fx-text-fill: #999;" GridPane.columnIndex="0" GridPane.rowIndex="2" />
            <Label fx:id="genresLabel" style="-fx-text-fill: white;" GridPane.columnIndex="1" GridPane.rowIndex="2" />
        </GridPane>
    </VBox>

</VBox>
