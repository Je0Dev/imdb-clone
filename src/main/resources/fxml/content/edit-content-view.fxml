<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane style="-fx-background-color: #0f0f0f;" 
            xmlns="http://javafx.com/javafx/17.0.12"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.papel.imdb_clone.controllers.content.EditContentController">

    <style>
        .section-title {
            -fx-font-size: 16px;
            -fx-text-fill: #f5c518;
            -fx-font-weight: bold;
            -fx-padding: 0 0 12 0;
            -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.3), 2, 0, 1, 1);
        }
        .form-label {
            -fx-text-fill: #e0e0e0;
            -fx-font-weight: bold;
            -fx-padding: 0 0 5 0;
            -fx-font-size: 13px;
        }
        .form-field {
            -fx-background-color: #1e1e1e;
            -fx-text-fill: #ffffff;
            -fx-prompt-text-fill: #888888;
            -fx-background-radius: 4;
            -fx-padding: 8 12;
            -fx-border-color: #444444;
            -fx-border-radius: 4;
            -fx-border-width: 1;
        }
        .genre-checkbox {
            -fx-text-fill: #e0e0e0;
            -fx-font-size: 13px;
            -fx-padding: 2 0;
        }
        .genre-checkbox .box {
            -fx-background-color: #1e1e1e;
            -fx-border-color: #444444;
            -fx-border-radius: 3;
        }
        .genre-checkbox:selected .box {
            -fx-background-color: #f5c518;
        }
    </style>

    <top>
        <HBox spacing="10" style="-fx-background-color: #1a1a1a; -fx-padding: 15 30; -fx-alignment: center-left;">
            <Button onAction="#handleBack" style="-fx-background-color: transparent; -fx-text-fill: #f5c518; -fx-font-weight: bold; -fx-font-size: 14; -fx-cursor: hand; -fx-padding: 5 10 5 0;" text="← Back">
                <graphic>
                    <Text fill="#f5c518">
                        <font>
                            <Font name="System Bold" size="16" />
                        </font>
                    </Text>
                </graphic>
            </Button>
            <Text fill="#f5c518" style="-fx-font-size: 22; -fx-font-weight: bold;">
                Edit Content
            </Text>
        </HBox>
    </top>

    <center>
        <ScrollPane fitToWidth="true" hbarPolicy="NEVER" style="-fx-background: #0f0f0f;">
            <VBox style="-fx-padding: 25; -fx-spacing: 25; -fx-alignment: top_center;">
                <!-- Main Content Container -->
                <VBox style="-fx-background-color: #1a1a1a; -fx-padding: 25; -fx-spacing: 25; -fx-background-radius: 8; -fx-max-width: 1000; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 10, 0, 0, 2);">
                    <!-- Basic Information Section -->
                    <VBox spacing="15">
                        <Label text="Basic Information" styleClass="section-title" />
                        
                        <GridPane hgap="15" vgap="15" style="-fx-pref-width: 100%;">
                            <columnConstraints>
                                <ColumnConstraints hgrow="ALWAYS" minWidth="250" prefWidth="300" />
                                <ColumnConstraints hgrow="ALWAYS" minWidth="200" prefWidth="250" />
                                <ColumnConstraints hgrow="NEVER" minWidth="100" prefWidth="120" />
                                <ColumnConstraints hgrow="NEVER" minWidth="80" prefWidth="100" />
                            </columnConstraints>

                            <!-- Row 1 -->
                            <!-- Title -->
                            <VBox GridPane.columnIndex="0" spacing="3">
                                <Label text="Title*" styleClass="form-label" />
                                <TextField fx:id="titleField" styleClass="form-field" />
                            </VBox>

                            <!-- Type -->
                            <VBox GridPane.columnIndex="1" spacing="3">
                                <Label text="Type*" styleClass="form-label" />
                                <ComboBox fx:id="typeComboBox" styleClass="form-field" style="-fx-pref-width: 200;" />
                            </VBox>

                            <!-- Release Year -->
                            <VBox GridPane.columnIndex="2" spacing="3">
                                <Label text="Year*" styleClass="form-label" />
                                <TextField fx:id="yearField" styleClass="form-field" style="-fx-pref-width: 100;" />
                            </VBox>

                            <!-- Rating -->
                            <VBox GridPane.columnIndex="3" spacing="3">
                                <Label text="Rating*" styleClass="form-label" />
                                <TextField fx:id="ratingField" styleClass="form-field" style="-fx-pref-width: 80;" />
                            </VBox>

                            <!-- Row 2 -->
                            <!-- Director -->
                            <VBox GridPane.rowIndex="1" GridPane.columnIndex="0" spacing="3">
                                <Label text="Director" styleClass="form-label" />
                                <TextField fx:id="directorField" styleClass="form-field" style="-fx-pref-width: 250;" />
                            </VBox>

                            <!-- Actors -->
                            <VBox GridPane.rowIndex="1" GridPane.columnIndex="1" GridPane.columnSpan="3" spacing="3">
                                <Label text="Actors (comma-separated)" styleClass="form-label" />
                                <TextField fx:id="actorsField" styleClass="form-field" />
                            </VBox>
                        </GridPane>
                    </VBox>

                    <!-- Genres Section -->
                    <VBox spacing="10">
                        <Label text="Genres" styleClass="section-title" />
                        <GridPane hgap="15" vgap="10" style="-fx-pref-width: 100%;">
                            <columnConstraints>
                                <ColumnConstraints hgrow="SOMETIMES" minWidth="150" />
                                <ColumnConstraints hgrow="SOMETIMES" minWidth="150" />
                                <ColumnConstraints hgrow="SOMETIMES" minWidth="150" />
                                <ColumnConstraints hgrow="SOMETIMES" minWidth="150" />
                            </columnConstraints>
                            
                            <!-- Row 1 -->
                            <CheckBox fx:id="actionCheckBox" styleClass="genre-checkbox" text="Action" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                            <CheckBox fx:id="adventureCheckBox" styleClass="genre-checkbox" text="Adventure" GridPane.columnIndex="1" GridPane.rowIndex="0" />
                            <CheckBox fx:id="animationCheckBox" styleClass="genre-checkbox" text="Animation" GridPane.columnIndex="2" GridPane.rowIndex="0" />
                            <CheckBox fx:id="comedyCheckBox" styleClass="genre-checkbox" text="Comedy" GridPane.columnIndex="3" GridPane.rowIndex="0" />

                            <!-- Row 2 -->
                            <CheckBox fx:id="crimeCheckBox" styleClass="genre-checkbox" text="Crime" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                            <CheckBox fx:id="dramaCheckBox" styleClass="genre-checkbox" text="Drama" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                            <CheckBox fx:id="familyCheckBox" styleClass="genre-checkbox" text="Family" GridPane.columnIndex="2" GridPane.rowIndex="1" />
                            <CheckBox fx:id="fantasyCheckBox" styleClass="genre-checkbox" text="Fantasy" GridPane.columnIndex="3" GridPane.rowIndex="1" />
                            
                            <!-- Row 3 -->
                            <CheckBox fx:id="historyCheckBox" styleClass="genre-checkbox" text="History" GridPane.columnIndex="0" GridPane.rowIndex="2" />
                            <CheckBox fx:id="horrorCheckBox" styleClass="genre-checkbox" text="Horror" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                            <CheckBox fx:id="musicCheckBox" styleClass="genre-checkbox" text="Music" GridPane.columnIndex="2" GridPane.rowIndex="2" />
                            <CheckBox fx:id="mysteryCheckBox" styleClass="genre-checkbox" text="Mystery" GridPane.columnIndex="3" GridPane.rowIndex="2" />
                            
                            <!-- Row 4 -->
                            <CheckBox fx:id="romanceCheckBox" styleClass="genre-checkbox" text="Romance" GridPane.columnIndex="0" GridPane.rowIndex="3" />
                            <CheckBox fx:id="scifiCheckBox" styleClass="genre-checkbox" text="Sci-Fi" GridPane.columnIndex="1" GridPane.rowIndex="3" />
                            <CheckBox fx:id="thrillerCheckBox" styleClass="genre-checkbox" text="Thriller" GridPane.columnIndex="2" GridPane.rowIndex="3" />
                            <CheckBox fx:id="warCheckBox" styleClass="genre-checkbox" text="War" GridPane.columnIndex="3" GridPane.rowIndex="3" />
                            
                            <!-- Row 5 -->
                            <CheckBox fx:id="westernCheckBox" styleClass="genre-checkbox" text="Western" GridPane.columnIndex="0" GridPane.rowIndex="4" />
                        </GridPane>
                    </VBox>

                    <!-- Series Information Section -->
                    <VBox fx:id="seriesFields" spacing="15" visible="false">
                        <Label text="Series Information" styleClass="section-title" />
                        
                        <GridPane hgap="15" vgap="15" style="-fx-pref-width: 100%;">
                            <columnConstraints>
                                <ColumnConstraints hgrow="SOMETIMES" minWidth="150" />
                                <ColumnConstraints hgrow="SOMETIMES" minWidth="150" />
                                <ColumnConstraints hgrow="SOMETIMES" minWidth="200" />
                            </columnConstraints>
                            
                            <VBox spacing="3">
                                <Label text="Seasons" styleClass="form-label" />
                                <TextField fx:id="seasonsField" styleClass="form-field" style="-fx-pref-width: 120;" />
                            </VBox>
                            
                            <VBox spacing="3">
                                <Label text="Episodes" styleClass="form-label" />
                                <TextField fx:id="episodesField" styleClass="form-field" style="-fx-pref-width: 120;" />
                            </VBox>
                            
                            <VBox spacing="3">
                                <Label text="Status" styleClass="form-label" />
                                <ComboBox fx:id="statusComboBox" styleClass="form-field" style="-fx-pref-width: 180;" />
                            </VBox>
                        </GridPane>
                    </VBox>
                    
                    <!-- Buttons -->
                    <HBox spacing="15" style="-fx-alignment: center-right; -fx-border-color: #2d2d2d; -fx-border-width: 1 0 0 0; -fx-padding: 25 0 0 0;">
                        <Button onAction="#handleCancel" style="-fx-background-color: #333333; -fx-text-fill: #e0e0e0; -fx-font-weight: bold; -fx-font-size: 13; -fx-padding: 8 20; -fx-background-radius: 4; -fx-cursor: hand; -fx-min-width: 100; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.3), 3, 0, 1, 1);" text="CANCEL" />
                        <Button onAction="#handleSave" style="-fx-background-color: #f5c518; -fx-text-fill: #000000; -fx-font-weight: bold; -fx-font-size: 13; -fx-padding: 8 25; -fx-background-radius: 4; -fx-cursor: hand; -fx-effect: dropshadow(gaussian, rgba(245, 197, 24, 0.7), 5, 0, 1, 2); -fx-min-width: 140;" text="SAVE CHANGES" />
                    </HBox>
                </VBox>
                
                <!-- Status Message -->
                <Label fx:id="statusLabel" style="-fx-text-fill: #f5c518; -fx-padding: 8 0 0 0; -fx-font-size: 14px; -fx-wrap-text: true; -fx-max-width: 1000; -fx-alignment: center;" />
                
            </VBox>
        </ScrollPane>
    </center>
</BorderPane>
