<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<VBox alignment="CENTER" spacing="30" style="-fx-background-color: #0f0f0f;" 
      xmlns="http://javafx.com/javafx/17.0.12" 
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.papel.imdb_clone.controllers.RefactoredMainController">
    <Text style="-fx-fill: #f5c518; -fx-font-size: 48px; -fx-font-weight: bold; -fx-font-family: 'Segoe UI', Arial, sans-serif;" text="IMDb Clone"/>
    
    <VBox alignment="CENTER" spacing="20">
        <Button onAction="#showMovies" style="-fx-background-color: #f5c518; -fx-text-fill: #000000; -fx-font-size: 18px; -fx-font-weight: bold; -fx-padding: 15 40; -fx-cursor: hand; -fx-background-radius: 5;" text="MOVIES"/>
        <Button onAction="#showTVShows" style="-fx-background-color: #f5c518; -fx-text-fill: #000000; -fx-font-size: 18px; -fx-font-weight: bold; -fx-padding: 15 40; -fx-cursor: hand; -fx-background-radius: 5;" text="SERIES"/>
        <Button onAction="#showAdvancedSearch" style="-fx-background-color: transparent; -fx-text-fill: #f5c518; -fx-font-size: 16px; -fx-font-weight: bold; -fx-padding: 12 30; -fx-cursor: hand; -fx-border-color: #f5c518; -fx-border-radius: 5; -fx-border-width: 2;" text="ADVANCED SEARCH"/>
    </VBox>
    
    <VBox.margin>
        <Insets bottom="100.0" left="20.0" right="20.0" top="100.0"/>
    </VBox.margin>
</VBox>
