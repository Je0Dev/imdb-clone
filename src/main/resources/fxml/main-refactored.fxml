<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.AmbientLight?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.paint.*?>
<?import javafx.scene.text.Font?>
<BorderPane fx:id="mainBorderPane"
            style="-fx-background-color: #0f0f0f; -fx-font-family: 'Segoe UI', Arial, sans-serif;"
            xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.papel.imdb_clone.controllers.RefactoredMainController">

    <!-- Top Navigation Bar -->
    <top>
        <VBox style="-fx-background-color: #0f0f0f; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.3), 8, 0, 0, 2);">
            <!-- Top Navigation -->
            <HBox style="-fx-padding: 10 20; -fx-background-color: #0a0a0a; -fx-alignment: center-left;">
                <HBox style="-fx-padding: 0 0 0 10; -fx-spacing: 0; -fx-alignment: center-left;">
                    <Label onMouseClicked="#goToHome"
                           style="-fx-text-fill: #f5c518; -fx-font-size: 24px; -fx-font-weight: bold; -fx-padding: 0 2 0 5; -fx-cursor: hand;"
                           text="IMDb">
                        <font>
                            <Font size="11.0"/>
                        </font>
                    </Label>
                    <Label onMouseClicked="#goToHome"
                           style="-fx-text-fill: #ffffff; -fx-font-size: 24px; -fx-font-weight: bold; -fx-cursor: hand;"
                           text="Clone"/>
                </HBox>


                <Region HBox.hgrow="ALWAYS"/>
            </HBox>


        </VBox>
    </top>

    <!-- Sidebar and Main Content -->
    <center>
        <SplitPane dividerPositions="0.15"
                   style="-fx-background-color: #0f0f0f; -fx-padding: 0; -fx-border-color: #222; -fx-border-width: 0 1px 0 0;">
            <!-- Sidebar -->
            <VBox fx:id="sidebar"
                  style="-fx-background-color: #0a0a0a; -fx-padding: 20 0 0 0; -fx-min-width: 180; -fx-pref-width: 180; -fx-max-width: 180; -fx-spacing: 10; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 5, 0, 0, 2);">
                <children>

                    <Button onAction="#showMovies"
                            style="-fx-background-color: #f5c518; -fx-text-fill: #000000; -fx-font-size: 18px; -fx-font-weight: bold; -fx-padding: 15 40; -fx-cursor: hand; -fx-background-radius: 5;"
                            text="MOVIES">
                        <textFill>
                            <RadialGradient centerX="0.47237569060773477" centerY="0.5" cycleMethod="REFLECT"
                                            radius="0.5">
                                <stops>
                                    <Stop>
                                        <color>
                                            <Color/>
                                        </color>
                                    </Stop>
                                    <Stop offset="0.5533436031125331">
                                        <color>
                                            <Color red="0.1379999965429306" green="0.5769000053405762"
                                                   blue="0.6000000238418579"/>
                                        </color>
                                    </Stop>
                                    <Stop offset="1.0">
                                        <color>
                                            <Color red="0.7236841917037964" green="0.16081871092319489"
                                                   blue="0.46101364493370056"/>
                                        </color>
                                    </Stop>
                                </stops>
                            </RadialGradient>
                        </textFill>
                    </Button>
                    <Button onAction="#showTVShows"
                            style="-fx-background-color: #f5c518; -fx-text-fill: #000000; -fx-font-size: 18px; -fx-font-weight: bold; -fx-padding: 15 40; -fx-cursor: hand; -fx-background-radius: 5;"
                            text="SERIES">
                        <textFill>
                            <LinearGradient cycleMethod="REFLECT" endX="1.0" endY="1.0" startX="0.971563981042654">
                                <stops>
                                    <Stop>
                                        <color>
                                            <Color/>
                                        </color>
                                    </Stop>
                                    <Stop offset="0.5533436031125331">
                                        <color>
                                            <Color red="0.1379999965429306" green="0.5769000053405762"
                                                   blue="0.6000000238418579"/>
                                        </color>
                                    </Stop>
                                    <Stop offset="1.0">
                                        <color>
                                            <Color red="0.7236841917037964" green="0.16081871092319489"
                                                   blue="0.46101364493370056"/>
                                        </color>
                                    </Stop>
                                </stops>
                            </LinearGradient>
                        </textFill>
                    </Button>
                    <AmbientLight color="CHARTREUSE" lightOn="true"/>
                </children>
            </VBox>

            <!-- Main Content -->
            <VBox fx:id="featuredContentContainer"
                  style="-fx-background-color: #0f0f0f; -fx-spacing: 20; -fx-padding: 20;">
                <!-- Featured Content will be loaded here dynamically -->
                <VBox fx:id="featuredContent"
                      style="-fx-background-color: #141414; -fx-min-height: 400; -fx-pref-height: 400; -fx-alignment: center;">

                    <Button onAction="#showAdvancedSearch"
                            style="-fx-background-color: transparent; -fx-text-fill: #f5c518; -fx-font-size: 16px; -fx-font-weight: bold; -fx-padding: 12 30; -fx-cursor: hand; -fx-border-color: #f5c518; -fx-border-radius: 5; -fx-border-width: 2;"
                            text="ADVANCED SEARCH"/>
                    <Label style="-fx-text-fill: #fff; -fx-font-size: 24px; -fx-font-weight: bold;" text="HOME MENU"/>
                </VBox>

            </VBox>
        </SplitPane>
    </center>

    <!-- Bottom Status Bar -->
    <bottom>
        <HBox styleClass="footer">
            <Label fx:id="statusLabel" styleClass="status-label fade-in" text="2025 @ Papel" textFill="#16e19d"/>
            <Region HBox.hgrow="ALWAYS"/>
            <Label fx:id="userLabel" styleClass="user-label pulse" text="Imdb JAVAFX" textFill="#b91717"/>
        </HBox>
    </bottom>
</BorderPane>
