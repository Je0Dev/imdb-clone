<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<VBox style="-fx-background-color: #121212; -fx-font-family: 'Segoe UI', Arial, sans-serif;"
      xmlns="http://javafx.com/javafx/17.0.12"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.papel.imdb_clone.controllers.people.CelebritiesController">
    <!-- Top Navigation Bar -->
    <VBox style="-fx-background-color: #0f0f0f; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.4), 10, 0, 0, 3);">
        <!-- Top Navigation -->
        <HBox style="-fx-padding: 12 24; -fx-background-color: #0a0a0a; -fx-alignment: center-left; -fx-spacing: 20;">
            <HBox style="-fx-spacing: 0; -fx-alignment: center-left; -fx-padding-right: 20;">
                <Label onMouseClicked="#goToHome"
                       style="-fx-text-fill: #f5c518; -fx-font-size: 24px; -fx-font-weight: bold; -fx-padding: 0 2 0 5; -fx-cursor: hand;"
                       text="IMDb">
                    <font>
                        <Font size="11.0"/>
                    </font>
                </Label>
                <Label onMouseClicked="#goToHome"
                       style="-fx-text-fill: #ffffff; -fx-font-size: 24px; -fx-font-weight: bold; -fx-cursor: hand;"
                       text="Clone"/>
            </HBox>
            
            <!-- Home Button -->
            <Button onAction="#handleGoToHome" 
                    style="-fx-background-color: transparent; -fx-text-fill: #f5c518; -fx-border-color: #f5c518; -fx-border-width: 1.5; -fx-border-radius: 4; -fx-padding: 5 10; -fx-font-weight: bold; -fx-cursor: hand; -fx-effect: dropshadow(gaussian, rgba(245,197,24,0.3), 5, 0, 0, 1);" 
                    text="HOME">
                <tooltip>
                    <Tooltip text="Go to Home" />
                </tooltip>
            </Button>
        </HBox>
    </VBox>

    <!-- Main Content -->
    <VBox style="-fx-padding: 24; -fx-spacing: 24; -fx-background-color: #121212;">
        <!-- Unified Search -->
        <VBox style="-fx-spacing: 8; -fx-padding: 0 0 16 0;">
            <Label text="Search All Celebrities" style="-fx-text-fill: #f5c518; -fx-font-size: 16px; -fx-font-weight: bold;"/>
            <TextField fx:id="unifiedSearchField" promptText="Search actors and directors..." 
                       style="-fx-pref-width: 400px; -fx-background-color: #1e1e1e; -fx-text-fill: #ffffff; -fx-prompt-text-fill: #888888; -fx-border-color: #444444; -fx-border-radius: 4; -fx-padding: 8 12;" />
        </VBox>
        
        <TabPane tabClosingPolicy="UNAVAILABLE" style="-fx-background-color: transparent; -fx-tab-min-width: 120px;">
            <!-- Actors Tab -->
            <Tab text="Actors" style="-fx-background-color: transparent;">
                <VBox style="-fx-background-color: #121212; -fx-padding: 16; -fx-spacing: 16;">
                    <HBox style="-fx-spacing: 12; -fx-alignment: center-left;">
                        <TextField fx:id="actorSearchField" promptText="Search actors..." 
                                   style="-fx-pref-width: 300px; -fx-background-color: #1e1e1e; -fx-text-fill: #ffffff; -fx-prompt-text-fill: #888888; -fx-border-color: #333333; -fx-border-radius: 4; -fx-padding: 8 12;" />
                        <Button onAction="#handleRefresh" text="Refresh" 
                                style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 8 16; -fx-background-radius: 4; -fx-cursor: hand; -fx-effect: dropshadow(gaussian, rgba(76,175,80,0.3), 5, 0, 0, 2);" />
                        <Button onAction="#handleAddCelebrity" text="Add Celebrity" 
                                style="-fx-background-color: #FFD700; -fx-text-fill: #000000; -fx-font-weight: bold; -fx-padding: 8 16; -fx-background-radius: 4; -fx-cursor: hand; -fx-effect: dropshadow(gaussian, rgba(255,215,0,0.3), 5, 0, 0, 2);">
                            <tooltip>
                                <Tooltip style="-fx-background-color: #1E1E1E; -fx-text-fill: #FFFFFF; -fx-font-size: 12; -fx-padding: 8 12; -fx-background-radius: 4; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.5), 5, 0, 0, 2);" text="Add a new celebrity with name, birthdate, gender, nationality, and notable works"/>
                            </tooltip>
                        </Button>
                    </HBox>

                    <TableView fx:id="actorsTable" style="-fx-background-color: white; -fx-table-cell-border-color: #e0e0e0;" VBox.vgrow="ALWAYS">
                        <columns>
                            <TableColumn fx:id="actorNameColumn" prefWidth="200" text="Name">
                                <style>
                                    -fx-background-color: #f5f5f5;
                                    -fx-text-fill: #333333;
                                    -fx-font-weight: bold;
                                    -fx-border-color: #e0e0e0;
                                </style>
                            </TableColumn>
                            <TableColumn fx:id="actorBirthDateColumn" prefWidth="100" text="Birth Date">
                                <style>
                                    -fx-background-color: #f5f5f5;
                                    -fx-text-fill: #333333;
                                    -fx-font-weight: bold;
                                    -fx-border-color: #e0e0e0;
                                </style>
                            </TableColumn>
                            <TableColumn fx:id="actorGenderColumn" text="Gender">
                                <style>
                                    -fx-background-color: #f5f5f5;
                                    -fx-text-fill: #333333;
                                    -fx-font-weight: bold;
                                    -fx-border-color: #e0e0e0;
                                </style>
                            </TableColumn>
                            <TableColumn fx:id="actorNationalityColumn" prefWidth="120" text="Nationality">
                                <style>
                                    -fx-background-color: #f5f5f5;
                                    -fx-text-fill: #333333;
                                    -fx-font-weight: bold;
                                    -fx-border-color: #e0e0e0;
                                </style>
                            </TableColumn>
                            <TableColumn fx:id="actorNotableWorksColumn" prefWidth="300" text="Notable Works">
                                <style>
                                    -fx-background-color: #f5f5f5;
                                    -fx-text-fill: #333333;
                                    -fx-font-weight: bold;
                                    -fx-border-color: #e0e0e0;
                                </style>
                            </TableColumn>
                        </columns>
                        <style>
                            -fx-text-fill: #333333;
                            -fx-table-cell-border-color: #e0e0e0;
                            -fx-table-header-border-color: #e0e0e0;
                            -fx-background-color: white;
                        </style>
                        <columnResizePolicy>
                            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                        </columnResizePolicy>
                    </TableView>
                </VBox>
            </Tab>

            <!-- Directors Tab -->
            <Tab text="Directors" style="-fx-background-color: transparent;">
                <VBox style="-fx-background-color: #121212; -fx-padding: 16; -fx-spacing: 16;">
                    <HBox style="-fx-spacing: 12; -fx-alignment: center-left;">
                        <TextField fx:id="directorSearchField" promptText="Search directors..." 
                                   style="-fx-pref-width: 300px; -fx-background-color: #1e1e1e; -fx-text-fill: #ffffff; -fx-prompt-text-fill: #888888; -fx-border-color: #333333; -fx-border-radius: 4; -fx-padding: 8 12;" />
                        <Button onAction="#handleRefresh" text="Refresh" 
                                style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 8 16; -fx-background-radius: 4; -fx-cursor: hand; -fx-effect: dropshadow(gaussian, rgba(76,175,80,0.3), 5, 0, 0, 2);" />
                        <Button onAction="#handleAddCelebrity" text="Add Celebrity" 
                                style="-fx-background-color: #FFD700; -fx-text-fill: #000000; -fx-font-weight: bold; -fx-padding: 8 16; -fx-background-radius: 4; -fx-cursor: hand; -fx-effect: dropshadow(gaussian, rgba(255,215,0,0.3), 5, 0, 0, 2);">
                            <tooltip>
                                <Tooltip style="-fx-background-color: #1E1E1E; -fx-text-fill: #FFFFFF; -fx-font-size: 12; -fx-padding: 8 12; -fx-background-radius: 4; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.5), 5, 0, 0, 2);" text="Add a new celebrity with name, birthdate, gender, nationality, and notable works"/>
                            </tooltip>
                        </Button>
                    </HBox>
                    <TableView fx:id="directorsTable" style="-fx-background-color: white; -fx-table-cell-border-color: #e0e0e0;" VBox.vgrow="ALWAYS">
                        <columns>
                            <TableColumn fx:id="directorNameColumn" prefWidth="200" text="Name">
                                <style>
                                    -fx-background-color: #f5f5f5;
                                    -fx-text-fill: #333333;
                                    -fx-font-weight: bold;
                                    -fx-border-color: #e0e0e0;
                                </style>
                            </TableColumn>
                            <TableColumn fx:id="directorBirthDateColumn" prefWidth="100" text="Birth Date">
                                <style>
                                    -fx-background-color: #f5f5f5;
                                    -fx-text-fill: #333333;
                                    -fx-font-weight: bold;
                                    -fx-border-color: #e0e0e0;
                                </style>
                            </TableColumn>
                            <TableColumn fx:id="directorGenderColumn" text="Gender">
                                <style>
                                    -fx-background-color: #f5f5f5;
                                    -fx-text-fill: #333333;
                                    -fx-font-weight: bold;
                                    -fx-border-color: #e0e0e0;
                                </style>
                            </TableColumn>
                            <TableColumn fx:id="directorNationalityColumn" prefWidth="120" text="Nationality">
                                <style>
                                    -fx-background-color: #f5f5f5;
                                    -fx-text-fill: #333333;
                                    -fx-font-weight: bold;
                                    -fx-border-color: #e0e0e0;
                                </style>
                            </TableColumn>
                            <TableColumn fx:id="directorNotableWorksColumn" prefWidth="300" text="Notable Works">
                                <style>
                                    -fx-background-color: #f5f5f5;
                                    -fx-text-fill: #333333;
                                    -fx-font-weight: bold;
                                    -fx-border-color: #e0e0e0;
                                </style>
                            </TableColumn>
                        </columns>
                        <style>
                            -fx-text-fill: #333333;
                            -fx-table-cell-border-color: #e0e0e0;
                            -fx-table-header-border-color: #e0e0e0;
                            -fx-background-color: white;
                        </style>
                        <columnResizePolicy>
                            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                        </columnResizePolicy>
                    </TableView>
                </VBox>
            </Tab>
        </TabPane>
        <Label fx:id="statusLabel" style="-fx-text-fill: #f5c518; -fx-padding: 8 0 0 0; -fx-font-size: 14px;"/>
    </VBox>
</VBox>
