<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.Rectangle?>
<?import javafx.scene.text.*?>

<BorderPane xmlns="http://javafx.com/javafx/17.0.12"
            xmlns:fx="http://javafx.com/fxml/1"
            style="-fx-background-color: #0a0a0a; -fx-font-family: 'Segoe UI', Arial, sans-serif;">

    <!-- Search Suggestions Popup -->

    <top>
        <VBox spacing="15.0"
              style="-fx-padding: 20; -fx-background-color: #0f0f0f; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.5), 10, 0, 0, 5);">
            <!-- Header Section -->
            <HBox alignment="CENTER_LEFT" spacing="15">
                <HBox alignment="CENTER_LEFT" spacing="10">
                    <Text style="-fx-fill: #FFD700; -fx-font-size: 26px; -fx-font-weight: bolder;"
                          text="MOVIES">
                        <effect>
                            <DropShadow color="rgba(255,215,0,0.7)" radius="10" spread="0.3"/>
                        </effect>
                    </Text>
                    <Rectangle width="3" height="30" arcWidth="5" arcHeight="5" fill="#444"/>
                    <Text style="-fx-fill: #888; -fx-font-size: 16; -fx-font-style: italic;"
                          text="Browse and manage your movie collection"/>
                </HBox>

                <Region HBox.hgrow="ALWAYS"/>

                <HBox alignment="CENTER_RIGHT" spacing="10"
                      style="-fx-padding: 5 15; -fx-background-color: #1a1a1a; -fx-background-radius: 20;">
                    <Text text="TOTAL MOVIES:" style="-fx-fill: #aaa; -fx-font-size: 12;"/>
                    <Label fx:id="movieCountLabel"
                           style="-fx-text-fill: #FFD700; -fx-font-weight: bolder; -fx-font-size: 16;"/>
                </HBox>
            </HBox>

            <!-- Search and Filter Section -->
            <VBox spacing="10" style="-fx-padding: 5 0 15 0;">
                <HBox alignment="CENTER_LEFT" spacing="15">
                    <!-- Search Field with Icon -->
                    <HBox style="-fx-background-color: #1E1E1E; -fx-background-radius: 20; -fx-padding: 0 15; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.3), 5, 0, 0, 1);"
                          HBox.hgrow="ALWAYS">
                        <Text text="🔍" style="-fx-font-size: 16; -fx-opacity: 0.7; -fx-padding: 0 5 0 0;"/>
                        <TextField fx:id="globalSearchField"
                                   promptText="Search movies by title, director, or genre..."
                                   style="-fx-background-color: transparent; -fx-text-fill: #FFFFFF; -fx-prompt-text-fill: #666; -fx-font-size: 14; -fx-padding: 12 10 12 5; -fx-font-family: 'Segoe UI', Arial, sans-serif;"
                                   HBox.hgrow="ALWAYS">
                        </TextField>
                    </HBox>

                    <!-- Sort Dropdown -->
                    <ComboBox fx:id="movieSortBy" prefWidth="220"
                              style="-fx-background-color: #1E1E1E; -fx-text-fill: #FFFFFF; -fx-prompt-text-fill: #888; -fx-font-size: 14; -fx-background-radius: 20; -fx-border-color: #444; -fx-border-radius: 20; -fx-padding: 0 15 0 15; -fx-cursor: hand; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.3), 5, 0, 0, 1);">
                        <padding>
                            <Insets left="15" right="15" top="12" bottom="12"/>
                        </padding>

                    </ComboBox>
                </HBox>

                <!-- Action Buttons -->
                <HBox spacing="15" style="-fx-padding: 5 0 0 0;">
                    <Button text="ADD MOVIE" onAction="#handleAddMovie"
                            style="-fx-background-color: #FFD700; -fx-text-fill: #000000; -fx-font-weight: bolder; -fx-font-size: 14px; -fx-padding: 10 20; -fx-background-radius: 20; -fx-cursor: hand; -fx-effect: dropshadow(gaussian, rgba(255,215,0,0.3), 5, 0, 0, 2); -fx-transition: all 0.2s;"
                    />

                    <Button text="RATE MOVIE" onAction="#handleRateMovie"
                            style="-fx-background-color: #4FC3F7; -fx-text-fill: #000000; -fx-font-weight: bolder; -fx-font-size: 14px; -fx-padding: 10 20; -fx-background-radius: 20; -fx-cursor: hand; -fx-effect: dropshadow(gaussian, rgba(79,195,247,0.3), 5, 0, 0, 2); -fx-transition: all 0.2s;"
                    />

                    <Button text="DELETE MOVIE" onAction="#handleDeleteMovie"
                            style="-fx-background-color: #FF5252; -fx-text-fill: #FFFFFF; -fx-font-weight: bolder; -fx-font-size: 14px; -fx-padding: 10 20; -fx-background-radius: 20; -fx-cursor: hand; -fx-effect: dropshadow(gaussian, rgba(255,82,82,0.3), 5, 0, 0, 2); -fx-transition: all 0.2s;"
                    />
                </HBox>
            </VBox>
        </VBox>
    </top>

    <center>
        <VBox style="-fx-padding: 0 20 20 20; -fx-spacing: 15;"/>
        <!-- Table Header -->
        <HBox style="-fx-background-color: #1a1a1a; -fx-padding: 12 20; -fx-background-radius: 8 8 0 0; -fx-border-color: #222; -fx-border-width: 0 1px 1px 1px;">
            <Label text="Movie Title"
                   style="-fx-text-fill: #FFD700; -fx-font-weight: bold; -fx-pref-width: 300; -fx-font-size: 13;"/>
            <Label text="Year"
                   style="-fx-text-fill: #4FC3F7; -fx-font-weight: bold; -fx-pref-width: 80; -fx-alignment: CENTER; -fx-font-size: 13;"/>
            <Label text="Genre"
                   style="-fx-text-fill: #A5D6A7; -fx-font-weight: bold; -fx-pref-width: 150; -fx-font-size: 13;"/>
            <Label text="Rating"
                   style="-fx-text-fill: #FFD54F; -fx-font-weight: bold; -fx-pref-width: 100; -fx-alignment: CENTER; -fx-font-size: 13;"/>
            <Region HBox.hgrow="ALWAYS"/>
        </HBox>

        <!-- Movie Table -->
        <TableView fx:id="movieTable"
                   style="-fx-background-color: transparent; -fx-text-fill: #FFFFFF; -fx-table-cell-border-color: transparent; -fx-padding: 0; -fx-background-radius: 0 0 8 8; -fx-border-color: #222; -fx-border-width: 0 1px 1px 1px; -fx-border-radius: 0 0 8 8;">
            <columns>
                <TableColumn fx:id="movieTitleColumn" text="TITLE" prefWidth="250" sortable="true"
                             style="-fx-font-weight: bold; -fx-text-fill: #FFD700; -fx-font-size: 13;">

                    <graphic>
                        <HBox alignment="CENTER" spacing="5">

                            <Label text="TITLE"
                                   style="-fx-font-weight: bold; -fx-text-fill: #FFD700; -fx-font-size: 13;"/>
                        </HBox>
                    </graphic>

                </TableColumn>
                <TableColumn fx:id="movieYearColumn" text="YEAR" prefWidth="200" sortable="true"
                             style="-fx-text-fill: #4FC3F7; -fx-font-size: 13;">

                    <graphic>
                        <HBox alignment="CENTER" spacing="5">
                            <Label text="YEAR"
                                   style="-fx-font-weight: bold; -fx-text-fill: #FFD700; -fx-font-size: 13;"/>
                        </HBox>
                    </graphic>

                </TableColumn>
                <TableColumn fx:id="movieGenreColumn" text="GENRE" prefWidth="200" sortable="false"
                             style="-fx-text-fill: #A5D6A7; -fx-font-size: 13;">

                    <graphic>
                        <HBox alignment="CENTER" spacing="5">

                            <Label text="GENRE"
                                   style="-fx-font-weight: bold; -fx-text-fill: #FFD700; -fx-font-size: 13;"/>
                        </HBox>
                    </graphic>

                    <graphic>
                        <HBox alignment="CENTER" spacing="5">
                            <Label text="GENRE"
                                   style="-fx-font-weight: bold; -fx-text-fill: #FFD700; -fx-font-size: 13;"/>
                        </HBox>
                    </graphic>

                </TableColumn>
                <TableColumn fx:id="movieRatingColumn" text="RATING" prefWidth="100" sortable="true"
                             style="-fx-text-fill: #FFD54F; -fx-font-size: 13;">
                    <graphic>
                        <HBox alignment="CENTER" spacing="5">
                            <Label text="RATING"
                                   style="-fx-font-weight: bold; -fx-text-fill: #FFD700; -fx-font-size: 13;"/>
                        </HBox>
                    </graphic>

                </TableColumn>
                <TableColumn fx:id="movieDurationColumn" text="DURATION" prefWidth="100" sortable="true"
                             style="-fx-text-fill: #90CAF9; -fx-font-size: 13;">

                    <graphic>
                        <HBox alignment="CENTER" spacing="5">
                            <Label text="DURATION"
                                   style="-fx-font-weight: bold; -fx-text-fill: #FFD700; -fx-font-size: 13;"/>
                        </HBox>
                    </graphic>

                </TableColumn>
            </columns>
        </TableView>
    </center>

    <bottom>
        <HBox alignment="CENTER"
              style="-fx-background-color: #0f0f0f; -fx-padding: 12 25; -fx-border-color: #222; -fx-border-width: 1 0 0 0;"
              spacing="25"/>
        <!-- Status and Pagination -->
        <HBox alignment="CENTER_LEFT" spacing="15">
            <Label fx:id="statusLabel"
                   style="-fx-text-fill: #888; -fx-font-size: 13; -fx-font-family: 'Segoe UI', Arial, sans-serif;"
                   text="Ready"/>
            <Text text="|" style="-fx-fill: #444; -fx-font-size: 14; -fx-font-family: 'Segoe UI', Arial, sans-serif;"/>
            <Label fx:id="itemCountLabel"
                   style="-fx-text-fill: #FFD700; -fx-font-weight: bold; -fx-font-size: 13; -fx-font-family: 'Segoe UI', Arial, sans-serif;"
                   text="0 items"/>
        </HBox>

        <Region HBox.hgrow="ALWAYS"/>

        <!-- Pagination Controls -->
        <HBox alignment="CENTER_RIGHT" spacing="10">
            <Button text="❮ Previous"
                    style="-fx-background-color: #2a2a2a; -fx-text-fill: #ffffff; -fx-font-size: 13px; -fx-padding: 5 15; -fx-background-radius: 15; -fx-cursor: hand; -fx-border-color: #444; -fx-border-width: 1; -fx-border-radius: 15; -fx-transition: all 0.2s; -fx-font-family: 'Segoe UI', Arial, sans-serif;"
            />
            <Label text="Page 1 of 1"
                   style="-fx-text-fill: #aaa; -fx-font-size: 13; -fx-font-family: 'Segoe UI', Arial, sans-serif;"/>
            <Button text="Next ❯"
                    style="-fx-background-color: #2a2a2a; -fx-text-fill: #ffffff; -fx-font-size: 13px; -fx-padding: 5 15; -fx-background-radius: 15; -fx-cursor: hand; -fx-border-color: #444; -fx-border-width: 1; -fx-border-radius: 15; -fx-transition: all 0.2s; -fx-font-family: 'Segoe UI', Arial, sans-serif;"
            />
        </HBox>
    </bottom>
</BorderPane>
