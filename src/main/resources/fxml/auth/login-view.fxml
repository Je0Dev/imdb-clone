<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane style="-fx-background-color: #0f0f0f;" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.papel.imdb_clone.controllers.authentication.AuthController">
    
    <center>
        <StackPane>
            <!-- Login Container (initially visible) -->
            <StackPane fx:id="loginContainer" alignment="CENTER" style="-fx-padding: 40;" visible="true">
                <VBox alignment="CENTER" spacing="20">
            <!-- Logo -->
            <Label style="-fx-text-fill: #f5c518; -fx-font-size: 36px; -fx-font-weight: bold; -fx-padding: 0 0 20 0;" text="IMDb Clone" />
            
            <!-- Login Form -->
            <VBox alignment="CENTER" spacing="10" style="-fx-background-color: #1a1a1a; -fx-padding: 30; -fx-background-radius: 10;">
                <Label style="-fx-text-fill: #ffffff; -fx-font-size: 24px; -fx-font-weight: bold; -fx-padding: 0 0 20 0;" text="Sign In" />
                
                <VBox spacing="5">
                    <Label style="-fx-text-fill: #ffffff;" text="Username or Email" />
                    <TextField fx:id="usernameField" style="-fx-pref-width: 300; -fx-background-color: #2a2a2a; -fx-text-fill: #ffffff; -fx-prompt-text-fill: #666666; -fx-border-color: #333333; -fx-border-radius: 5; -fx-padding: 10;" />
                </VBox>
                
                <VBox spacing="5">
                    <Label style="-fx-text-fill: #ffffff;" text="Password" />
                    <PasswordField fx:id="passwordField" style="-fx-pref-width: 300; -fx-background-color: #2a2a2a; -fx-text-fill: #ffffff; -fx-prompt-text-fill: #666666; -fx-border-color: #333333; -fx-border-radius: 5; -fx-padding: 10;" />
                </VBox>
                
                <HBox alignment="CENTER_RIGHT" style="-fx-padding: 5 0 0 0;">
                    <Button style="-fx-background-color: transparent; -fx-text-fill: #f5c518; -fx-underline: true; -fx-cursor: hand;" text="Forgot Password?" />
                </HBox>
                
                <Button fx:id="loginButton" onAction="#handleLogin" style="-fx-background-color: #f5c518; -fx-text-fill: #000000; -fx-font-weight: bold; -fx-pref-width: 300; -fx-padding: 12; -fx-cursor: hand; -fx-background-radius: 5;" text="Sign In" />
                
                <HBox alignment="CENTER" spacing="5" style="-fx-padding: 10 0 0 0;">
                    <Label style="-fx-text-fill: #999999;" text="New to IMDb?" />
                    <Button onAction="#navigateToRegister" style="-fx-background-color: transparent; -fx-text-fill: #f5c518; -fx-underline: true; -fx-cursor: hand; -fx-padding: 0;" text="Create an account" />
                </HBox>
                     <Button onAction="#continueAsGuest" style="-fx-background-color: transparent; -fx-text-fill: #f5c518; -fx-border-color: #f5c518; -fx-border-radius: 5; -fx-padding: 10 20; -fx-cursor: hand;" text="Continue as Guest" />
                
                <Label fx:id="loginErrorLabel" style="-fx-text-fill: #ff4444; -fx-padding: 10 0 0 0;" visible="false" />
            </VBox>
                </VBox>
            </StackPane>
        </StackPane>
    </center>
</BorderPane>
