<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane fx:controller="com.papel.imdb_clone.controllers.authentication.AuthController"
            style="-fx-background-color: #0f0f0f;" 
            xmlns="http://javafx.com/javafx/17.0.12" 
            xmlns:fx="http://javafx.com/fxml/1">
    
    <center>
        <VBox alignment="CENTER" spacing="20" style="-fx-padding: 40;">
            <!-- Logo -->
            <Label text="IMDb Clone" style="-fx-text-fill: #f5c518; -fx-font-size: 36px; -fx-font-weight: bold; -fx-padding: 0 0 20 0;" />
            
            <!-- Registration Form -->
            <VBox alignment="CENTER" spacing="10" style="-fx-background-color: #1a1a1a; -fx-padding: 30; -fx-background-radius: 10;" prefWidth="400">
                <Label text="Create Account" style="-fx-text-fill: #ffffff; -fx-font-size: 24px; -fx-font-weight: bold; -fx-padding: 0 0 20 0;" />
                
                <VBox spacing="5">
                    <Label text="Username" style="-fx-text-fill: #ffffff;" />
                    <TextField fx:id="usernameField" style="-fx-pref-width: 300; -fx-background-color: #2a2a2a; -fx-text-fill: #ffffff; -fx-prompt-text-fill: #666666; -fx-border-color: #333333; -fx-border-radius: 5; -fx-padding: 10;" />
                </VBox>
                
                <VBox spacing="5">
                    <Label text="Email" style="-fx-text-fill: #ffffff;" />
                    <TextField fx:id="emailField" style="-fx-pref-width: 300; -fx-background-color: #2a2a2a; -fx-text-fill: #ffffff; -fx-prompt-text-fill: #666666; -fx-border-color: #333333; -fx-border-radius: 5; -fx-padding: 10;" />
                </VBox>
                
                <VBox spacing="5">
                    <Label text="Password" style="-fx-text-fill: #ffffff;" />
                    <PasswordField fx:id="passwordField" style="-fx-pref-width: 300; -fx-background-color: #2a2a2a; -fx-text-fill: #ffffff; -fx-prompt-text-fill: #666666; -fx-border-color: #333333; -fx-border-radius: 5; -fx-padding: 10;" />
                </VBox>
                
                <VBox spacing="5">
                    <Label text="Confirm Password" style="-fx-text-fill: #ffffff;" />
                    <PasswordField fx:id="confirmPasswordField" style="-fx-pref-width: 300; -fx-background-color: #2a2a2a; -fx-text-fill: #ffffff; -fx-prompt-text-fill: #666666; -fx-border-color: #333333; -fx-border-radius: 5; -fx-padding: 10;" />
                </VBox>
                
                <Button text="Create Account" onAction="#handleRegister" style="-fx-background-color: #f5c518; -fx-text-fill: #000000; -fx-font-weight: bold; -fx-pref-width: 300; -fx-padding: 12; -fx-cursor: hand; -fx-background-radius: 5; -fx-margin: 10 0 0 0;" />
                
                <HBox alignment="CENTER" spacing="5" style="-fx-padding: 10 0 0 0;">
                    <Label text="Already have an account?" style="-fx-text-fill: #999999;" />
                    <Button text="Sign in" onAction="#navigateToLogin" style="-fx-background-color: transparent; -fx-text-fill: #f5c518; -fx-underline: true; -fx-cursor: hand; -fx-padding: 0;" />
                </HBox>
                
                <Label fx:id="errorLabel" style="-fx-text-fill: #ff4444; -fx-padding: 10 0 0 0;" visible="false" />
            </VBox>
        </VBox>
    </center>
    
</BorderPane>
