<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<ScrollPane style="-fx-background: #0f0f0f;" xmlns:fx="http://javafx.com/fxml/1"
            xmlns="http://javafx.com/javafx/17.0.12"
            fx:controller="com.papel.imdb_clone.controllers.ContentDetailsController">
    <content>
        <VBox style="-fx-background-color: #0f0f0f; -fx-padding: 20; -fx-spacing: 20;">
            <!-- Back Button -->
            <Button alignment="CENTER_LEFT" maxWidth="Infinity" onAction="#goBack"
                    style="-fx-background-color: transparent; -fx-text-fill: #f5c518; -fx-font-size: 14px; -fx-cursor: hand; -fx-padding: 5 10; -fx-border-color: #f5c518; -fx-border-radius: 3;"
                    text="â† Back to Results"/>

            <!-- Content Header -->
            <HBox spacing="20">
                <!-- Poster -->
                <ImageView fx:id="posterImage" fitHeight="450" fitWidth="300" preserveRatio="true"
                           style="-fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.5), 10, 0, 0, 0);"/>

                <!-- Details -->
                <VBox spacing="10" style="-fx-padding: 10 0 0 0;">
                    <HBox alignment="CENTER_LEFT" spacing="10">
                        <Label fx:id="titleLabel"
                               style="-fx-text-fill: white; -fx-font-size: 28px; -fx-font-weight: bold;"/>
                        <Label fx:id="yearLabel" style="-fx-text-fill: #cccccc; -fx-font-size: 24px;"/>
                    </HBox>

                    <HBox alignment="CENTER_LEFT" spacing="10">
                        <Label fx:id="ratingLabel"
                               style="-fx-text-fill: #f5c518; -fx-font-size: 18px; -fx-font-weight: bold;"/>
                        <Label fx:id="genreLabel"
                               style="-fx-text-fill: #cccccc; -fx-font-size: 16px; -fx-padding: 0 0 0 10;"/>
                    </HBox>

                    <!-- Box Office -->
                    <VBox spacing="5" style="-fx-padding: 15 0 0 0;">
                        <Label style="-fx-text-fill: #f5c518; -fx-font-size: 18px; -fx-font-weight: bold;"
                               text="Box Office"/>
                        <Label fx:id="boxOfficeLabel" style="-fx-text-fill: white; -fx-font-size: 16px;"/>
                    </VBox>

                    <!-- Awards -->
                    <VBox spacing="5" style="-fx-padding: 15 0 0 0;">
                        <Label style="-fx-text-fill: #f5c518; -fx-font-size: 18px; -fx-font-weight: bold;"
                               text="Awards"/>
                        <Label fx:id="awardsLabel"
                               style="-fx-text-fill: white; -fx-font-size: 16px; -fx-wrap-text: true;"/>
                    </VBox>

                    <!-- Main Cast -->
                    <VBox spacing="5" style="-fx-padding: 15 0 0 0;">
                        <Label style="-fx-text-fill: #f5c518; -fx-font-size: 18px; -fx-font-weight: bold;"
                               text="Main Cast"/>
                        <Label fx:id="castLabel"
                               style="-fx-text-fill: white; -fx-font-size: 16px; -fx-wrap-text: true;"/>
                    </VBox>
                </VBox>
            </HBox>
        </VBox>
    </content>
</ScrollPane>
