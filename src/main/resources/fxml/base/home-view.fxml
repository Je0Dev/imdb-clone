<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<BorderPane style="-fx-background-color: #0f0f0f;" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.papel.imdb_clone.controllers.MainController">
    
    <top>
        <HBox style="-fx-background-color: #1a1a1a; -fx-padding: 10; -fx-alignment: center-right; -fx-spacing: 10;">
            <Label fx:id="userLabel" style="-fx-text-fill: #f5c518; -fx-font-size: 14px;" text="Guest">
                <padding>
                    <Insets right="20" />
                </padding>
            </Label>
            <Button fx:id="logoutButton" onAction="#handleLogout" text="Logout" visible="false"
                    style="-fx-background-color: #d32f2f; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 5 15; -fx-cursor: hand; -fx-background-radius: 5;" />
        </HBox>
    </top>
    
    <center>
        <VBox style="-fx-padding: 40; -fx-spacing: 40; -fx-alignment: center;">
            <!-- Welcome Section -->
            <VBox style="-fx-spacing: 20; -fx-alignment: center; -fx-padding: 0 0 20 0;">
                <Label style="-fx-text-fill: #f5c518; -fx-font-size: 36px; -fx-font-weight: bold;" text="Welcome to IMDb Clone" />
                
                <Label style="-fx-text-fill: #cccccc; -fx-font-size: 18px; -fx-alignment: center;" text="Discover and explore your favorite movies and TV shows." wrapText="true" />
            </VBox>
            
            <!-- Quick Navigation Buttons -->
            <VBox style="-fx-spacing: 20; -fx-alignment: center;">
                <HBox style="-fx-spacing: 20; -fx-alignment: center;">
                    <Button onAction="#showMovies" style="-fx-background-color: #f5c518; -fx-text-fill: #000000; -fx-font-size: 16px; -fx-font-weight: bold; -fx-pref-width: 150; -fx-pref-height: 60; -fx-cursor: hand; -fx-background-radius: 5;" text="Movies" />
                    
                    <Button onAction="#showTVShows" style="-fx-background-color: #f5c518; -fx-text-fill: #000000; -fx-font-size: 16px; -fx-font-weight: bold; -fx-pref-width: 150; -fx-pref-height: 60; -fx-cursor: hand; -fx-background-radius: 5;" text="TV Shows" />
                </HBox>
                
                <HBox style="-fx-spacing: 20; -fx-alignment: center;">
                    <Button onAction="#showCelebrities" style="-fx-background-color: #f5c518; -fx-text-fill: #000000; -fx-font-size: 16px; -fx-font-weight: bold; -fx-pref-width: 150; -fx-pref-height: 60; -fx-cursor: hand; -fx-background-radius: 5;" text="Celebrities" />
                    
                    <Button onAction="#showRated" style="-fx-background-color: #9C27B0; -fx-text-fill: #ffffff; -fx-font-size: 16px; -fx-font-weight: bold; -fx-pref-width: 150; -fx-pref-height: 60; -fx-cursor: hand; -fx-background-radius: 5;" text="Rated" />
                    
                    <Button onAction="#showAdvancedSearch" style="-fx-background-color: #333333; -fx-text-fill: #ffffff; -fx-font-size: 16px; -fx-font-weight: bold; -fx-pref-width: 150; -fx-pref-height: 60; -fx-cursor: hand; -fx-background-radius: 5;" text="Search" />
                </HBox>
                
                <!-- User Actions (Removed sign-in and register buttons) -->
            </VBox>
        </VBox>
    </center>
    
</BorderPane>
