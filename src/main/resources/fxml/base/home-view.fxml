<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<BorderPane style="-fx-background-color: #0f0f0f;" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.papel.imdb_clone.controllers.MainController">
    
    <left>
        <VBox fx:id="sidebar" style="-fx-background-color: #1a1a1a; -fx-pref-width: 200; -fx-spacing: 10; -fx-padding: 20 10 10 10;">
            <Label text="Menu" style="-fx-text-fill: #f5c518; -fx-font-weight: bold; -fx-font-size: 16; -fx-padding: 0 0 10 10;" />
            <Button text="Home" onAction="#showHome" style="-fx-background-color: transparent; -fx-text-fill: #ffffff; -fx-font-size: 14; -fx-alignment: center-left; -fx-padding: 10 15; -fx-cursor: hand;" />
            <Button text="Movies" onAction="#showMovies" style="-fx-background-color: transparent; -fx-text-fill: #ffffff; -fx-font-size: 14; -fx-alignment: center-left; -fx-padding: 10 15; -fx-cursor: hand;" />
            <Button text="TV Shows" onAction="#showTVShows" style="-fx-background-color: transparent; -fx-text-fill: #ffffff; -fx-font-size: 14; -fx-alignment: center-left; -fx-padding: 10 15; -fx-cursor: hand;" />
            <Button text="Celebrities" onAction="#showCelebrities" style="-fx-background-color: transparent; -fx-text-fill: #ffffff; -fx-font-size: 14; -fx-alignment: center-left; -fx-padding: 10 15; -fx-cursor: hand;" />
            <Button text="Advanced Search" onAction="#showAdvancedSearch" style="-fx-background-color: transparent; -fx-text-fill: #ffffff; -fx-font-size: 14; -fx-alignment: center-left; -fx-padding: 10 15; -fx-cursor: hand;" />
            <VBox style="-fx-pref-height: 20;" />
            <Button fx:id="signInButton" text="Sign In" onAction="#showLogin" style="-fx-background-color: transparent; -fx-text-fill: #f5c518; -fx-font-size: 14; -fx-alignment: center-left; -fx-padding: 10 15; -fx-cursor: hand;" />
            <Button fx:id="registerButton" text="Register" onAction="#showRegister" style="-fx-background-color: transparent; -fx-text-fill: #f5c518; -fx-font-size: 14; -fx-alignment: center-left; -fx-padding: 10 15; -fx-cursor: hand;" />
        </VBox>
    </left>
    
    <top>
        <HBox style="-fx-background-color: #1a1a1a; -fx-padding: 10; -fx-alignment: center-right;">
            <Label fx:id="userLabel" style="-fx-text-fill: #f5c518; -fx-font-size: 14px;" text="Available">
                <padding>
                    <Insets right="20" />
                </padding>
            </Label>
        </HBox>
    </top>
    
    <center>
        <VBox style="-fx-padding: 40; -fx-spacing: 40; -fx-alignment: center;">
            <!-- Welcome Section -->
            <VBox style="-fx-spacing: 20; -fx-alignment: center; -fx-padding: 0 0 20 0;">
                <Label style="-fx-text-fill: #f5c518; -fx-font-size: 36px; -fx-font-weight: bold;" text="Welcome to IMDb Clone" />
                
                <Label style="-fx-text-fill: #cccccc; -fx-font-size: 18px; -fx-alignment: center;" text="Discover and explore your favorite movies and TV shows." wrapText="true" />
            </VBox>
            
            <!-- Quick Navigation Buttons -->
            <VBox style="-fx-spacing: 20; -fx-alignment: center;">
                <HBox style="-fx-spacing: 20; -fx-alignment: center;">
                    <Button onAction="#showMovies" style="-fx-background-color: #f5c518; -fx-text-fill: #000000; -fx-font-size: 16px; -fx-font-weight: bold; -fx-pref-width: 150; -fx-pref-height: 60; -fx-cursor: hand; -fx-background-radius: 5;" text="Movies" />
                    
                    <Button onAction="#showTVShows" style="-fx-background-color: #f5c518; -fx-text-fill: #000000; -fx-font-size: 16px; -fx-font-weight: bold; -fx-pref-width: 150; -fx-pref-height: 60; -fx-cursor: hand; -fx-background-radius: 5;" text="TV Shows" />
                </HBox>
                
                <HBox style="-fx-spacing: 20; -fx-alignment: center;">
                    <Button onAction="#showCelebrities" style="-fx-background-color: #f5c518; -fx-text-fill: #000000; -fx-font-size: 16px; -fx-font-weight: bold; -fx-pref-width: 150; -fx-pref-height: 60; -fx-cursor: hand; -fx-background-radius: 5;" text="Celebrities" />
                    
                    <Button onAction="#showAdvancedSearch" style="-fx-background-color: #333333; -fx-text-fill: #ffffff; -fx-font-size: 16px; -fx-font-weight: bold; -fx-pref-width: 150; -fx-pref-height: 60; -fx-cursor: hand; -fx-background-radius: 5;" text="Advanced Search" />
                </HBox>
            </VBox>
        </VBox>
    </center>
    
</BorderPane>
