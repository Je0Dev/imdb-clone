<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>
<?import java.lang.String?>
<BorderPane style="-fx-background-color: #0a0a0a;" xmlns="http://javafx.com/javafx/17.0.12"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.papel.imdb_clone.controllers.AdvancedSearchController">

    <top>
        <VBox spacing="15.0" style="-fx-padding: 20;">
            <HBox alignment="CENTER_LEFT" spacing="15">
                <Text style="-fx-fill: #00BCD4; -fx-font-size: 26px; -fx-font-weight: bolder; -fx-effect: dropshadow(gaussian, rgba(0,188,212,0.5), 10, 0, 0, 2);"
                      text="ADVANCED SEARCH"/>
                <Region HBox.hgrow="ALWAYS"/>
                <Label style="-fx-text-fill: #FFFFFF; -fx-font-weight: bold; -fx-font-size: 14;" text="RESULTS FOUND:"/>
                <Label fx:id="resultsCountLabel"
                       style="-fx-text-fill: #00BCD4; -fx-font-weight: bolder; -fx-font-size: 16; -fx-effect: dropshadow(gaussian, rgba(0,188,212,0.5), 5, 0, 0, 1);"/>
            </HBox>

            <!-- Search Form -->
            <VBox spacing="15"
                  style="-fx-padding: 10; -fx-background-color: #1E1E1E; -fx-background-radius: 6; -fx-border-color: #333; -fx-border-radius: 6;">
                <HBox alignment="CENTER_LEFT" spacing="15">
                    <Label style="-fx-text-fill: #00BCD4; -fx-font-weight: bold; -fx-font-size: 14;"
                           text="SEARCH CRITERIA"/>
                    <Region HBox.hgrow="ALWAYS"/>
                    <Button onAction="#resetFilters"
                            style="-fx-background-color: transparent; -fx-text-fill: #FF9800; -fx-border-color: #FF9800; -fx-border-width: 1.5; -fx-border-radius: 4; -fx-padding: 5 15; -fx-font-weight: bold; -fx-cursor: hand;"
                            text="RESET FILTERS">
                        <font>
                            <Font size="15.0"/>
                        </font>
                    </Button>
                </HBox>

                <GridPane hgap="15" vgap="10">
                    <padding>
                        <Insets bottom="10" left="10" right="10" top="0"/>
                    </padding>

                    <!-- Row 1 -->
                    <Label style="-fx-text-fill: #FFFFFF; -fx-font-weight: bold;" text="Keywords:"
                           GridPane.columnIndex="0" GridPane.rowIndex="0"/>
                    <TextField fx:id="keywordsField" promptText="Title, plot, actors..."
                               style="-fx-background-color: #2A2A2A; -fx-text-fill: #FFFFFF; -fx-prompt-text-fill: #888; -fx-background-radius: 4; -fx-border-color: #444; -fx-border-radius: 4; -fx-padding: 8 12;"
                               GridPane.columnIndex="1" GridPane.columnSpan="3" GridPane.rowIndex="0"/>

                    <!-- Row 2 -->
                    <Label style="-fx-text-fill: #FFFFFF; -fx-font-weight: bold;" text="Content Type:"
                           GridPane.columnIndex="0" GridPane.rowIndex="1"/>
                    <HBox spacing="10" GridPane.columnIndex="1" GridPane.rowIndex="1">
                        <CheckBox fx:id="movieCheckBox" selected="true" style="-fx-text-fill: #FFFFFF;" text="Movies"/>
                        <CheckBox fx:id="seriesCheckBox" selected="true" style="-fx-text-fill: #FFFFFF;"
                                  text="TV Series"/>
                    </HBox>

                    <Label style="-fx-text-fill: #FFFFFF; -fx-font-weight: bold;" text="Year Range:"
                           GridPane.columnIndex="2" GridPane.rowIndex="1"/>
                    <HBox alignment="CENTER_LEFT" spacing="5" GridPane.columnIndex="3" GridPane.rowIndex="1">
                        <TextField fx:id="yearFrom" prefWidth="70" promptText="From"
                                   style="-fx-background-color: #2A2A2A; -fx-text-fill: #FFFFFF; -fx-prompt-text-fill: #888; -fx-background-radius: 4; -fx-border-color: #444; -fx-border-radius: 4; -fx-padding: 8 12;"/>
                        <Label style="-fx-text-fill: #FFFFFF; -fx-padding: 0 5;" text="-"/>
                        <TextField fx:id="yearTo" prefWidth="70" promptText="To"
                                   style="-fx-background-color: #2A2A2A; -fx-text-fill: #FFFFFF; -fx-prompt-text-fill: #888; -fx-background-radius: 4; -fx-border-color: #444; -fx-border-radius: 4; -fx-padding: 8 12;"/>
                    </HBox>

                    <!-- Row 3 -->
                    <Label style="-fx-text-fill: #FFFFFF; -fx-font-weight: bold;" text="Genre:" GridPane.columnIndex="0"
                           GridPane.rowIndex="2"/>
                    <ComboBox fx:id="genreComboBox" prefWidth="200" promptText="Select genre..."
                              style="-fx-background-color: #2A2A2A; -fx-text-fill: #FFFFFF; -fx-prompt-text-fill: #888; -fx-background-radius: 4; -fx-border-color: #444; -fx-border-radius: 4; -fx-padding: 5 10;"
                              GridPane.columnIndex="1" GridPane.rowIndex="2"/>

                    <Label style="-fx-text-fill: #FFFFFF; -fx-font-weight: bold;" text="Minimum Rating:"
                           GridPane.columnIndex="2" GridPane.rowIndex="2"/>
                    <HBox alignment="CENTER_LEFT" spacing="5" GridPane.columnIndex="3" GridPane.rowIndex="2">
                        <Slider fx:id="ratingSlider" majorTickUnit="2" max="10" min="0" minorTickCount="1"
                                prefWidth="150" showTickLabels="true" showTickMarks="true" snapToTicks="true"
                                style="-fx-padding: 5 0;" value="0"/>
                        <Label fx:id="ratingValueLabel"
                               style="-fx-text-fill: #FFD54F; -fx-font-weight: bold; -fx-min-width: 30;" text="0.0"/>
                    </HBox>
                    <columnConstraints>
                        <ColumnConstraints/>
                        <ColumnConstraints/>
                        <ColumnConstraints/>
                        <ColumnConstraints/>
                    </columnConstraints>
                    <rowConstraints>
                        <RowConstraints/>
                        <RowConstraints/>
                        <RowConstraints/>
                    </rowConstraints>
                </GridPane>

                <HBox alignment="CENTER_RIGHT" spacing="15" style="-fx-padding: 0 10 10 0;">
                    <Button defaultButton="true" onAction="#handleSearch"
                            style="-fx-background-color: #00BCD4; -fx-text-fill: #000000; -fx-font-weight: bolder; -fx-font-size: 14; -fx-padding: 8 25; -fx-background-radius: 4; -fx-cursor: hand; -fx-effect: dropshadow(gaussian, rgba(0,188,212,0.5), 5, 0, 0, 2);"
                            text="SEARCH"/>
                </HBox>
            </VBox>
        </VBox>
    </top>

    <center>
        <VBox spacing="10" style="-fx-padding: 0 20 20 20;">
            <HBox alignment="CENTER_RIGHT" spacing="10">
                <Label style="-fx-text-fill: #FFFFFF; -fx-font-weight: bold;" text="Sort by:"/>
                <ComboBox fx:id="sortByCombo" prefWidth="220"
                          style="-fx-background-color: #1E1E1E; -fx-text-fill: #FFFFFF; -fx-border-color: #444; -fx-border-radius: 4; -fx-font-size: 14;"/>
            </HBox>

            <TableView fx:id="resultsTable"
                       style="-fx-background-color: #1A1A1A; -fx-text-fill: #FFFFFF; -fx-table-cell-border-color: #333;"
                       styleClass="content-table" VBox.vgrow="ALWAYS">
                <styleClass>
                    <String fx:value="table-view"/>
                    <String fx:value="content-table"/>
                </styleClass>
                <columnResizePolicy>
                    <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                </columnResizePolicy>
                <columns>
                    <TableColumn fx:id="resultTitleColumn" prefWidth="200" sortable="true"
                                 style="-fx-font-weight: bold; -fx-text-fill: #00E5FF; -fx-font-size: 14;" text="TITLE">
                        <style>
                            -fx-alignment: CENTER_LEFT;
                        </style>
                    </TableColumn>
                    <TableColumn fx:id="resultTypeColumn" prefWidth="80" sortable="true"
                                 style="-fx-text-fill: #40C4FF; -fx-font-weight: bold;" text="TYPE">
                        <style>
                            -fx-alignment: CENTER;
                        </style>
                    </TableColumn>
                    <TableColumn fx:id="resultYearColumn" prefWidth="80" sortable="true"
                                 style="-fx-text-fill: #69F0AE; -fx-font-weight: bold;" text="YEAR">
                        <style>
                            -fx-alignment: CENTER;
                        </style>
                    </TableColumn>
                    <TableColumn fx:id="resultGenreColumn" prefWidth="150" sortable="false"
                                 style="-fx-text-fill: #FF8A65; -fx-font-weight: bold;" text="GENRE">
                        <style>
                            -fx-alignment: CENTER_LEFT;
                        </style>
                    </TableColumn>
                    <TableColumn fx:id="resultImdbColumn" prefWidth="120" sortable="true"
                                 style="-fx-text-fill: #FFD700; -fx-font-weight: bold;" text="IMDB RATING">
                        <graphic>
                            <HBox alignment="CENTER" spacing="5">
                                <Label style="-fx-text-fill: #FFD700; -fx-font-size: 14;" text="â˜…"/>
                            </HBox>
                        </graphic>
                    </TableColumn>
                    <TableColumn fx:id="resultDirectorColumn" prefWidth="150" sortable="true"
                                 style="-fx-text-fill: #E040FB; -fx-font-weight: bold;" text="DIRECTOR">
                        <style>
                            -fx-alignment: CENTER_LEFT;
                        </style>
                    </TableColumn>
                </columns>
                <placeholder>
                    <VBox alignment="CENTER" cache="true" cacheHint="QUALITY" spacing="20" style="-fx-padding: 40;">
                        <Label style="-fx-font-size: 48; -fx-text-fill: #444;" text="ðŸ”"/>
                        <Label style="-fx-text-fill: #888; -fx-font-style: italic; -fx-font-size: 14;"
                               text="Enter your search criteria and click 'SEARCH' to find content"/>
                    </VBox>
                </placeholder>
            </TableView>

            <HBox alignment="CENTER_RIGHT" spacing="15" style="-fx-padding: 10 0 0 0;">
                <Label fx:id="pageInfoLabel" style="-fx-text-fill: #888;" text="Page 1 of 1"/>
                <ProgressIndicator fx:id="searchProgressIndicator" style="-fx-progress-color: #00BCD4;"
                                   visible="false"/>
                <Button fx:id="prevPageButton" onAction="#previousPage"
                        style="-fx-background-color: transparent; -fx-text-fill: #00BCD4; -fx-font-weight: bold; -fx-cursor: hand;"
                        text="â—€ PREV"/>
                <Button fx:id="nextPageButton" disable="true" onAction="#nextPage"
                        style="-fx-background-color: transparent; -fx-text-fill: #00BCD4; -fx-font-weight: bold; -fx-cursor: hand;"
                        text="NEXT â–¶"/>
            </HBox>
        </VBox>
    </center>
</BorderPane>
