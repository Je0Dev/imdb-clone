<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<StackPane style="-fx-background-color: #0f0f0f;" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.papel.imdb_clone.controllers.AuthController">


    <!-- Login Form -->
    <StackPane fx:id="loginContainer">
        <VBox alignment="CENTER" spacing="25" style="-fx-background-color: rgba(26, 26, 26, 0.9); -fx-padding: 40; -fx-background-radius: 15; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.3), 20, 0, 0, 0);">
            <Text fill="#d00c0c" style="-fx-font-size: 28; -fx-fill: #f5c518; -fx-font-weight: bold; -fx-font-family: 'Segoe UI', Arial, sans-serif;">
                Welcome Back
                <font>
                    <Font name="System Bold" size="28" />
                </font>
            </Text>
            <AmbientLight color="CHARTREUSE" lightOn="true" />

            <VBox spacing="15" style="-fx-min-width: 320;">
                <Label style="-fx-text-fill: #e0e0e0; -fx-font-weight: bold; -fx-font-size: 14;" text="Credentials" />
                <TextField fx:id="loginUsernameField" promptText="Enter your username or email" style="-fx-background-color: #2d2d2d; -fx-text-fill: #ffffff; -fx-prompt-text-fill: #888; -fx-background-radius: 5; -fx-padding: 10; -fx-font-size: 14; -fx-border-color: #3d3d3d; -fx-border-radius: 5; -fx-border-width: 1;" />
                <StackPane>
                    <PasswordField fx:id="loginPasswordField" promptText="Enter your password" style="-fx-background-color: #2d2d2d; -fx-text-fill: #ffffff; -fx-prompt-text-fill: #888; -fx-background-radius: 5; -fx-padding: 10 35 10 10; -fx-font-size: 14; -fx-border-color: #3d3d3d; -fx-border-radius: 5; -fx-border-width: 1;">
                    </PasswordField>
                </StackPane>
                <HBox alignment="CENTER_LEFT" spacing="10" style="-fx-padding: 5 0;">
                    <Button fx:id="loginButton" onAction="#handleLogin" style="-fx-background-color: #f5c518; -fx-text-fill: #000000; -fx-font-weight: bold; -fx-font-size: 14; -fx-padding: 12 20; -fx-background-radius: 5; -fx-cursor: hand; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 5, 0, 0, 2);" text="SIGN IN">
                    </Button>
                    <Region HBox.hgrow="ALWAYS" />
                </HBox>
                <Label fx:id="loginErrorLabel" style="-fx-text-fill: #ff6b6b; -fx-padding: 5 0 0 0; -fx-font-weight: bold; -fx-font-size: 13;" visible="false" />
                <AmbientLight color="CHARTREUSE" lightOn="true" />
            </VBox>

            <HBox alignment="CENTER" spacing="5" style="-fx-padding-top: 15;">
                <Text style="-fx-fill: #a0a0a0; -fx-font-size: 13;">Don't have an account?</Text>
                <Hyperlink fx:id="registerLink" onAction="#showRegisterForm" style="-fx-text-fill: #f5c518; -fx-font-weight: bold; -fx-font-size: 13; -fx-border-color: transparent; -fx-underline: false; -fx-cursor: hand;" text="Sign Up" />
            </HBox>
        </VBox>
    </StackPane>

    <!-- Register Form -->
    <StackPane fx:id="registerContainer" visible="false">
        <VBox alignment="CENTER" spacing="25" style="-fx-background-color: rgba(26, 26, 26, 0.9); -fx-padding: 40; -fx-background-radius: 15; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.3), 20, 0, 0, 0);">
            <Text style="-fx-font-size: 28; -fx-fill: #f5c518; -fx-font-weight: bold; -fx-font-family: 'Segoe UI', Arial, sans-serif;">
                Create Account
                <font>
                    <Font name="System Bold" size="28" />
                </font>
            </Text>

            <VBox spacing="15" style="-fx-min-width: 320;">
                <HBox spacing="15">
                    <VBox spacing="5" HBox.hgrow="ALWAYS">
                        <Label style="-fx-text-fill: #e0e0e0; -fx-font-weight: bold; -fx-font-size: 14;" text="First Name" />
                        <TextField fx:id="firstNameField" promptText="Enter your first name" style="-fx-background-color: #2d2d2d; -fx-text-fill: #ffffff; -fx-prompt-text-fill: #888; -fx-background-radius: 5; -fx-padding: 10; -fx-font-size: 14; -fx-border-color: #3d3d3d; -fx-border-radius: 5; -fx-border-width: 1;" />
                    </VBox>
                    <VBox spacing="5" HBox.hgrow="ALWAYS">
                        <Label style="-fx-text-fill: #e0e0e0; -fx-font-weight: bold; -fx-font-size: 14;" text="Last Name" />
                        <TextField fx:id="lastNameField" promptText="Enter your last name" style="-fx-background-color: #2d2d2d; -fx-text-fill: #ffffff; -fx-prompt-text-fill: #888; -fx-background-radius: 5; -fx-padding: 10; -fx-font-size: 14; -fx-border-color: #3d3d3d; -fx-border-radius: 5; -fx-border-width: 1;" HBox.hgrow="ALWAYS" />
                    </VBox>
                </HBox>

                <VBox spacing="5">
                    <Label style="-fx-text-fill: #e0e0e0; -fx-font-weight: bold; -fx-font-size: 14;" text="Username" />
                    <TextField fx:id="registerUsernameField" promptText="Choose a username" style="-fx-background-color: #2d2d2d; -fx-text-fill: #ffffff; -fx-prompt-text-fill: #888; -fx-background-radius: 5; -fx-padding: 10; -fx-font-size: 14; -fx-border-color: #3d3d3d; -fx-border-radius: 5; -fx-border-width: 1;" />
                </VBox>
                <VBox spacing="5">
                    <Label style="-fx-text-fill: #e0e0e0; -fx-font-weight: bold; -fx-font-size: 14;" text="Email" />
                    <TextField fx:id="emailField" promptText="Enter your email address" style="-fx-background-color: #2d2d2d; -fx-text-fill: #ffffff; -fx-prompt-text-fill: #888; -fx-background-radius: 5; -fx-padding: 10; -fx-font-size: 14; -fx-border-color: #3d3d3d; -fx-border-radius: 5; -fx-border-width: 1;" />
                </VBox>


                <VBox spacing="5">
                    <Label style="-fx-text-fill: #e0e0e0; -fx-font-weight: bold; -fx-font-size: 14;" text="Password" />
                    <PasswordField fx:id="passwordField" promptText="Enter your password" style="-fx-background-color: #2d2d2d; -fx-text-fill: #ffffff; -fx-prompt-text-fill: #888; -fx-background-radius: 5; -fx-padding: 10; -fx-font-size: 14; -fx-border-color: #3d3d3d; -fx-border-radius: 5; -fx-border-width: 1;" />
                </VBox>
                <VBox spacing="5">
                    <Label style="-fx-text-fill: #e0e0e0; -fx-font-weight: bold; -fx-font-size: 14;" text="Confirm Password" />
                    <PasswordField fx:id="confirmPasswordField" promptText="Confirm your password" style="-fx-background-color: #2d2d2d; -fx-text-fill: #ffffff; -fx-prompt-text-fill: #888; -fx-background-radius: 5; -fx-padding: 10; -fx-font-size: 14; -fx-border-color: #3d3d3d; -fx-border-radius: 5; -fx-border-width: 1;" />
                </VBox>
                <Label fx:id="passwordStrengthLabel" style="-fx-font-size: 11; -fx-text-fill: #b3b3b3;" />

                <Label fx:id="registerErrorLabel" style="-fx-text-fill: #ff4444; -fx-padding: 5 0 0 0;" visible="false" />
                <Button fx:id="registerButton" onAction="#handleRegister" styleClass="auth-button" text="Sign Up">
                </Button>
            </VBox>

            <HBox alignment="CENTER" spacing="5">
                <Text style="-fx-fill: #b3b3b3;">Already have an account?</Text>
                <Hyperlink fx:id="loginLink" onAction="#showLoginForm" style="-fx-text-fill: #f5c518;" text="Sign In" />
            </HBox>
        </VBox>
    </StackPane>

</StackPane>
